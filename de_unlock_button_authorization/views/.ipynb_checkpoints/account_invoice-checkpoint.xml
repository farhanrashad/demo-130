<odoo>
  <data>
    <!-- explicit list view definition -->
      
       <record id="account_invoice_view_inherit" model="ir.ui.view">
            <field name="name">account_invoice_tree_inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//tree//field[@name='number']" position="after">
                    <field name="name"/>
                </xpath>
            </field>
        </record>
        
       
      <record id="account_invoice_search_filter_inherit" model="ir.ui.view">
        <field name="name">account_invoice_search_inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
              <xpath expr="//filter[@name='myinvoices']" position="after">
                <separator/>
                  <filter string="Reference/Description" name="name" domain="[('name','=','name')]"/>
            </xpath>

          </field>
      </record>

 
  </data>
</odoo>
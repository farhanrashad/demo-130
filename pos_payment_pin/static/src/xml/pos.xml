<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_payment_pin_template" inherit_id="point_of_sale.template" xml:space="preserve">
	<t t-name="PaymentPinWidget">
		<div class="modal-dialog">
			<div class="popup popup-confirm" style="height: 325px !important;">
				<p class="title">Enter 16 Digits of Card Number</p>
				<div class="body" style="width: 465px;height: 190px;">
					<input id ="cc_pin" type="text" class="input-field" required="required" name="cc_pin" style="margin-top: 10px;"></input>
					<br/>
					<span id="errmsg" style="color: red;"/>
				</div>
				<div class="footer">
					<div class="button cancel">
						Cancel 
					</div>
					<div class="button confirm" id="apply_pin">
						Done
					</div>
				</div>
			</div>
		</div>
	</t>
</templates>

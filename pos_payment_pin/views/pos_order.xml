<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_pos_form_inherit_payment_pin" model="ir.ui.view">
            <field name="name">pos.order.view.inherit.payment.pin</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="cc_pin"/>
                </xpath> -->
                <xpath expr="//field[@name='payment_ids']//tree//field[@name='payment_method_id']" position="after">
                    <field name="cc_pin"/>
                </xpath>
            </field>
        </record>
        <record id="pos_payment_method_view_form_inherit_payment_pin" model="ir.ui.view">
            <field name="name">pos.payment.method.form.inherit.payment.pin</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <field name="cash_journal_id" position="after">
                    <field name="is_credit_card"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
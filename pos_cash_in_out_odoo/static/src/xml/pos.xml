<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_cash_in_out_odoo_template" inherit_id="point_of_sale.template" xml:space="preserve">

	<!-- CashInButtonWidget -->
	<t t-name="CashInButtonWidget" name="Cash In Button Widget">
		<t t-if="widget.pos.config.is_cash_in_out">
			<div class="control-button" style="width:90px;">
				<i class="fa fa-gift"></i>Cash In
			</div>
		</t>
	</t>
		 
		 
	<!-- CashOutButtonWidget -->
	<t t-name="CashOutButtonWidget" name="Cash Out Button Widget">
		<t t-if="widget.pos.config.is_cash_in_out">
			<div class="control-button" style="width:100px;">
				<i class="fa fa-gift"></i>Cash Out
			</div>
		</t>
	</t> 

	<t t-name="CashInOutStatementButtonWidget" name="Cash In-Out Statement Button Widget">
		<t t-if="widget.pos.config.is_print_statement">
			<div class="control-button" style="width: 100%;">
				<i class="fa fa-print"></i>Cash In-Out Statement
			</div>
		</t>
	</t>   
		 
		 
	<!-- CashOutPopupWidget -->
	<t t-name="CashOutPopupWidget">
		<div class="modal-dialog">
			<div class="popup popup-confirm" style="height: 325px !important;">
				<p class="title">Take Money Out (Cash Out)</p>
				<div class="body" style="width: 465px;height: 190px;">
					<div>
						<span id="error" class="alert" style="color: #ec1010; font-size: inherit; margin: 5px; text-align: center;">
							Please enter amount to withdraw
						</span>
					</div>
					<table  style="width: 100%;height: 80%;">
						<tr>
							<td> Amount: </td>
							<td><input id ="amount" type="text" class="input-field" required="required" name="amount"></input></td>
						</tr>
						<tr>
							<td>Reason:</td>
							<td><!-- <textarea rows="3" required="required"  id ="reason" type="text" class="input-field" name="name" style="height: 40px; width: 74%;"></textarea> -->
								<select id="pos_reason_out" class="form-control" style="width:300px; height:30px;font-size:16px;">
									<option t-att-value="0">Select Reason</option>
									<t t-foreach='widget.pos.pos_reason' t-as='reason'>
										<option t-att-value='reason.id'> 
											<t t-esc='reason.name'/>
										</option>
									</t>
								</select>
							</td>
						</tr>
						<tr>
							<td>Remark</td>
							<td>
								<textarea rows="3" required="required"  id ="remark_out" type="text" class="input-field" name="name" style="height: 40px; width: 74%;"></textarea>
							</td>
						</tr>
					</table>
				</div>
				<div class="footer">
					<div class="button cancel">
						Cancel 
					</div>
					<div class="button confirm" id="apply_cash_out">
						Take Money Out
					</div>
				</div>
			</div>
		</div>
	</t>
	<!-- CashInPopupWidget -->
	<t t-name="CashInPopupWidget">
		<div class="modal-dialog">
			<div class="popup popup-confirm" style="height: 325px !important;">
				<p class="title">Put Money In (Cash In)</p>
				<div class="body" style="width: 465px;height: 190px;">
					<div>
						<span id="error1" class="alert" style="color: #ec1010; font-size: inherit; margin: 5px; text-align: center;">
							Please enter amount to withdraw
						</span>
					</div>
					<table  style="width: 100%;height: 80%;">
						<tr>
							<td> Amount: </td>
							<td><input id ="cash_amount" type="text" class="input-field" required="required" name="amount"></input></td>
						</tr>
						<tr>
							<td>Reason:</td>
							<td><!-- <textarea rows="3" required="required"  id ="inreason" type="text" class="input-field" name="name" style="height: 40px; width: 74%;"></textarea> -->
								<select id="pos_reason_in" class="form-control" style="width:300px; height:30px;font-size:16px;">
									<option t-att-value="0">Select Reason</option>
									<t t-foreach='widget.pos.pos_reason' t-as='reason'>
										<option t-att-value='reason.id'> 
											<t t-esc='reason.name'/>
										</option>
									</t>
								</select>
							</td>
						</tr>
						<tr>
							<td>Remark</td>
							<td>
								<textarea rows="3" required="required"  id ="remark_in" type="text" class="input-field" name="name" style="height: 40px; width: 74%;"></textarea>
							</td>
						</tr>				
					</table>
				</div>	 
				<div class="footer">
					<div class="button cancel">
						Cancel 
					</div>
					<div class="button confirm" id="apply_cash_in">
						Put Money In 
					</div>
				</div>
			</div>
		</div>
	</t>

	<t t-name="CashInOutReceiptScreenWidget">
		<div class='receipt-screen screen'>
			<div class='screen-content'>
				<div class='top-content'>
					<span class='button next' style="background-color:#6EC89B; color:white">
						Exit
						<i class='fa fa-close' style="margin-left:5px;"></i>
					</span>
				</div>
				<div class="centered-content touch-scrollable">
					<div class="button print-cash">
						<i class='fa fa-print'></i> Print Receipt
					</div>
					<div class="pos-cash-receipt-container" style="text-align: center;">
					</div>
				</div>
			</div>
		</div>
	</t>

	<t t-name="CashInOutReceipt">
		<div class="pos-receipt-container">
			<div >
				<t t-esc="widget.pos.company.name"/><br />
				<div class="receipt-phone">
					Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
				</div>
				<div class="receipt-user">
					Cashier: <t t-esc="widget.pos.get_cashier().name"/><br />
				</div>
				
				<div class="receipt-user">
					Email: <t t-esc="widget.pos.company.email || ''"/><br />
				</div>

				<div class="receipt-user">
					Operation: <t t-esc="operation || ''"/><br />
				</div>

				<div class="receipt-user">
					Purpose: <t t-esc="purpose || ''"/><br />
				</div>

				<div class="receipt-user">
					Amount: <t t-esc="amount || ''"/><br />
				</div>
				<br/>
				<div style="margin-top:70px;text-align: center;">
				<p style="border-top: 2px dashed black;"></p>
				<b><span>Signature</span></b>
			</div>
			</div>
			
		</div>
	</t>
		
	<t t-name="CashInOutStatementPopupWidget">
		<div class="modal-dialog">
			<div class="popup popup-confirm" style="height: 400px !important;">
				<p class="title">Print Statement</p>
				<div class="body" style="width: 465px;height: 230px;">
					<div style="margin: 5px;">
						<span id="statement_error" class="alert" style="color: #ec1010; font-size: inherit; text-align: center;">
							Please enter amount to withdraw
						</span>
					</div>
					<table  style="width: 90%;height: 80%;    margin-left: 30px;">
						<tr>
							<td style="text-align: left;">Cashier:</td>
							<td style="padding: 10px;">
								<select  style="padding: 10px;min-width: 235px;border-radius: 5px;"
									id="cashier" class="cashier">
									<option>Select Cashier</option>
									<t t-foreach='widget.pos.users' t-as='user'>
										<option t-att-value='user.id'> 
											<t t-esc='user.name'/>
										</option>
									</t>
								</select>
							</td>
						</tr>		
						<tr>
							<td style="text-align: left;"> Start Date: </td>
							<td style="padding: 10px;"><input type="date" name="st_date" id="stmt_st_date"/></td>
						</tr>
						<tr>
							<td style="text-align: left;">End Date:</td>
							<td style="padding: 10px;"><input type="date" name="ed_date" id="stmt_end_date"/></td>
						</tr>
									
					</table>
				</div>	 
				<div class="footer">
					<div class="button do_print" id="do_print">
						Print
					</div>
					<div class="button cancel">
						Cancel 
					</div>
				</div>
			</div>
		</div>
	</t>	 
	

	<t t-name="StatementReportScreenWidget">
		<div class='receipt-screen screen'>
			<div class='screen-content'>
				<div class='top-content'>
					<span class='button next' style="background-color:#6EC89B; color:white">
						Exit
						<i class='fa fa-close' style="margin-left:5px;"></i>
					</span>
				</div>
				<div class="centered-content touch-scrollable">
					<div class="button print-statement">
						<i class='fa fa-print'></i> Print Receipt
					</div>
					<div class="pos-statement-receipt-container" style="text-align: center;">
					</div>
				</div>
			</div>
		</div>
	</t>

	<t t-name="StatementSummaryReceipt">
		<div class="pos-receipt-container">
			
			<div class="pos-center-align" style="text-align: center;">
				
				<t t-esc="date_o"/> <br/>
				<t t-esc="widget.pos.company.name"/><br />
				<div class="receipt-phone">
					Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
				</div>
				<div class="receipt-user">
					User: <t t-esc="widget.pos.get_cashier().name"/><br />
				</div>
				<div class="receipt-user">
					Email: <t t-esc="widget.pos.company.email || ''"/><br />
				</div>
				<br />
				<t t-if="!order_current_session">
					<div class="receipt-periods" style="width: 301px;">
						Start Date: <span t-esc="stmt_st_date"/><br/>
						End Date: <span t-esc="stmt_end_date"/>
					</div>
				</t>
				<br/>

				<table class='pos-center-align' style="margin-top: 10px;">
				<colgroup>
					<col width='30%' />
					<col width='30%' />
					<col width='30%' />
				</colgroup>
				<thead>
					<tr style="border-bottom: 2px solid black;">
						<th>Date</th>
						<th class="pos-center-align">Credit</th>
						<th class="pos-right-align">Debit</th>
					</tr>
				</thead>
				<tbody>
				<tr t-foreach="statement_data[2]" t-as="summery1">
					<td>
						<t t-esc="summery1.date"/>
					</td>
					<td class="pos-center-align">
						<t t-esc="summery1.credit"/>
					</td>
					<td class="pos-right-align">
						<t t-esc="summery1.debit"/>
					</td>
				</tr>
				<tr>
					<td style="padding-top: 10px;"><b> Total:</b></td>
					<td style="padding-top: 10px;" class="pos-center-align">
						<b><t t-esc="statement_data[3]"/></b></td>
					<td  style="padding-top: 10px;" class="pos-right-align">
						<b><t t-esc="statement_data[4]"/></b></td>
				</tr>
				</tbody>
			</table>
			<br />
			<br/>

			<div style="margin-top:70px;text-align: center;">
				<p style="border-top: 2px dashed black;"></p>
				<b><span>Signature</span></b>
			</div>
			</div>
				
			

			
		</div>
	</t>
</templates>
	
	

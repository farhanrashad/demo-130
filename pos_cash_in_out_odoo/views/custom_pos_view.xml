<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <!-- Add custom js for pos_cash_in_out_odoo -->     
        <template id="assets_for_pos_cash_in_out_odoo" inherit_id="point_of_sale.assets">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/pos_cash_in_out_odoo/static/src/js/pos.js"/>
            </xpath>
        </template>

        <record id="inherit_view_pos_config_reports" model="ir.ui.view">
            <field name="name">inherit.view.pos.config.reports</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2[5]" position="before">
                    <br/>
                    <h2 attrs="{'invisible': [('cash_control', '=', False)]}">Cash In-Out Configuration</h2>
                    <div class="row mt16 o_settings_container"  attrs="{'invisible': [('cash_control', '=', False)]}">
                        <div id="report" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_cash_in_out"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_cash_in_out"/>
                            </div>
                        </div>
                        <div id="report1" class="col-xs-12 col-md-6 o_setting_box" >
                            <div class="o_setting_left_pane">
                                <field name="is_print_statement"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_print_statement"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>


         <!--  View For POS Cash In Out -->
         <record id="view_pos_cash_in_out_odoo_tree_view" model="ir.ui.view">
            <field name="name">pos.cash.in.out.tree.view</field>
            <field name="model">pos.cash.in.out</field>
            <field name="arch" type="xml">
               <tree string="POS Cash In Out" create="0">
                    <field name="cash_type"/>
                    <field name="user_id"/>
                    <field name="shop_id"/>
                    <field name="session_id"/>
                    <field name="reason_id"/>
                    <field name="remark"/>
                    <field name="amount"/>              
                    <field name="create_date"/> 
                </tree>
            </field>
        </record>


       <record id="view_pos_cash_in_out_odoo_form_view" model="ir.ui.view">
                <field name="name">pos.cash.in.out.form.view</field>
                <field name="model">pos.cash.in.out</field>
                <field name="arch" type="xml">
                    <form string="POS Cash In Out" version="9.0">
                        <sheet>
                            <group>
                                <group>
                                    <field name="cash_type"/>
                                    <field name="amount"/>              
                                    <field name="create_date"/>
                                </group>

                                <group>
                                    <field name="user_id"/>
                                    <field name="session_id"/>
                                    <field name="remark"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

        <record model="ir.actions.act_window" id="action_pos_cash_in_out_odoo">
            <field name="name">POS Cash In Out</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.cash.in.out</field>
            <field name="view_mode">tree</field>
        </record>

        <!--  Menu For POS Cash In Out -->
        <menuitem
            id="menu_pos_cash_in_out_odoo"
            name="POS Cash In Out"
            parent="point_of_sale.pos_config_menu_catalog"
            action="action_pos_cash_in_out_odoo"
            groups="point_of_sale.group_pos_user"
            sequence="10"/>

        <menuitem
            id="menu_pos_cash_in_out_account"
            name="POS Cash In Out"
            action="action_pos_cash_in_out_odoo"
            parent="account_reports.account_reports_audit_reports_menu"
            sequence="20"
            />


    <record id="pos_reason_tree_view" model="ir.ui.view">
        <field name="name">pos.reason.tree.view</field>
        <field name="model">pos.reason</field>
        <field name="arch" type="xml">
           <tree string="POS Reasons">                                                  
                <field name="name"/>                
            </tree>
        </field>
    </record>

    <!-- POS Reason view -->
    <record id="pos_reason_form_view" model="ir.ui.view">
        <field name="name">pos.reason.form.view</field>
        <field name="model">pos.reason</field>
        <field name="arch" type="xml">
            <form string="POS Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>                                                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_reason" model="ir.actions.act_window">
        <field name="name">POS Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.reason</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_reasons"
        name="POS Reasons"
        parent="point_of_sale.menu_point_config_product"
        action="action_pos_reason"
        sequence="5"/>

    <record id="view_pos_session_form_inherit_cash_in_out" model="ir.ui.view">
        <field name="name">pos.session.form.view.cash_in_out</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(point_of_sale.action_pos_box_out)d']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_manager</attribute>
            </xpath>
        </field>
    </record>
        
    </data>
</odoo>

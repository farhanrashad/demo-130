<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_cancel_wizard" model="ir.ui.view">
          <field name="name">sale.order.cancel.wizard</field>
          <field name="model">sale.order.wizard</field>
          <field name="arch" type="xml">
              <form string="Cancel Order">
                  <group>
                      <field name="cancel_reason_id"/>
                  </group>
                <footer>
                        <button string="Submit" class="oe_highlight" type="object" name="action_cancel_order_wizard"/>
                        <button string="Cancel" class="btn_primary" special="cancel"/>
                </footer>
              </form>
          </field>
        </record>

        <record id="cancel_order_wizard" model="ir.actions.act_window">
            <field name="name">Cancel Sale Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_cancel_wizard"/>
            <field name="target">new</field>
        </record>

</odoo>
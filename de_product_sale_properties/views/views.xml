<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    

    
    
    
          <record id="open_product_property_order" model="ir.ui.view">
                <field name="name">Product Properties Form</field>
                <field name="model">product.properties</field>
                <field name="arch" type="xml">
                    <form string="Product Properties Form">
                      <sheet>
                        <group>
                            <field name="name" />
                          <field name="is_short" />
                            <field name="is_long" />
                        </group>
                        
                        <notebook>
                        <page string="Product Properties">
                            <field name="product_property_order_line">
                                <tree string="Product Properties Form" editable="bottom" >
                                        <field name="name"/>
                                        <field name="description"/>


                                </tree>
                            </field>
                           
                        </page>
                    </notebook>
                    </sheet>
                
                   </form>
                </field>
                </record>
        
            
            <record id="open_product_properties_tree" model="ir.ui.view">
                <field name="name">Product Properties Tree</field>
                <field name="model">product.properties</field>
                <field name="arch" type="xml">
                    <tree string="Product Properties Form Tree">
                         <field name="name"/>
                    </tree>
                </field>
            </record>
            
            
        
         
   
               
            <record id="open_open_product_properties_order" model="ir.actions.act_window">
                <field name="name">Product Properties Form</field>
                <field name="res_model">product.properties</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_properties_tree"/>
            </record>
            
           
            <menuitem id="menu_view_product_properties_form"
            action="open_open_product_properties_order"
            name="Product Properties"
            parent="stock.menu_warehouse_config" /> 
             
   <record id="view_product_product_custom" model="ir.ui.view">
            <field name="name">product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="internal_code" />
                </field>
               <xpath expr="//field[@name='barcode']" position="after">
					<field name="fabric_id"/>
				</xpath>     
               <xpath expr="//notebook" position="inside">
                  
                        <page string="Product Property">
                            <field name="product_property_line">
                               <tree string="Product Property " editable="bottom" >
                               <field name="sequence" widget="handle"/>
                                        <field name="product_property_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                   <field name="product_property_line_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                   <field name="description"/>
                                     <field name="is_short"/> 
            	                    <field name="is_long"/>
                                </tree>
                            </field>
                           
                           
                        </page>
                  
                    
                       
                    
                </xpath>
                </field>
                </record>


            
            </odoo>
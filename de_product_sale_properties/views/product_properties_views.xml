<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    

    
    
    
          <record id="open_product_property_order" model="ir.ui.view">
                <field name="name">Product Properties Form</field>
                <field name="model">product.properties</field>
                <field name="arch" type="xml">
                    <form string="Product Properties Form">
                      <sheet>
                        <group>
                            <group>
                            <field name="name" />
                                <field name="categ_id" widget="many2many_tags"/>
                                <field name="long_sequence" />
                                <field name="short_sequence" />
                            </group>
                            <group>
                                <field name="is_short" />
                            <field name="is_long" />
                            </group>
                          
                            
                        </group>
                        
                        <notebook>
                        <page string="Product Properties">
                            <field name="product_property_order_line">
                                <tree string="Product Properties Form" editable="bottom" >
                                        <field name="name"/>
                                        <field name="description"/>
                                    <field name="property_factory_ref_no"/>
                                </tree>
                            </field>
                           
                        </page>
                    </notebook>
                    </sheet>
                
                   </form>
                </field>
                </record>
        
            
            <record id="open_product_properties_tree" model="ir.ui.view">
                <field name="name">Product Properties Tree</field>
                <field name="model">product.properties</field>
                <field name="arch" type="xml">
                    <tree string="Product Properties Form Tree">
                         <field name="name"/>
                        <field name="long_sequence"/>
                        <field name="short_sequence"/>
                    </tree>
                </field>
            </record>
            
            
        
         
   
               
            <record id="open_open_product_properties_order" model="ir.actions.act_window">
                <field name="name">Product Properties Form</field>
                <field name="res_model">product.properties</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_properties_tree"/>
            </record>
            
           
            <menuitem id="menu_view_product_properties_form"
            action="open_open_product_properties_order"
            name="Product Properties"
            parent="stock.menu_warehouse_config" /> 
             
   


            
            </odoo>

<odoo>
  <data>
      
      <record model="ir.ui.view" id="view_project_task_sla_inh">
        <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="asset_model"/>
                </xpath>
                
            </field>
    </record>
      
      
      <record model="ir.ui.view" id="view_helpdesk_ticket_sla_inh">
        <field name="name">helpdesk.ticket.sla.form.inherit</field>
            <field name="model">helpdesk.ticket.sla</field>
            <field name="inherit_id" ref="de_helpdesk_sla.view_helpdesk_sla_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='team_id']" position="replace">
                    <field name="team_ids" widget="many2many_tags"/>
                </xpath>
                
            </field>
    </record>
                
      <record model="ir.ui.view" id="view_helpdesk_ticket_inh">
        <field name="name">helpdesk.ticket.form.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reference']" position="after">
                    <field name="closed_date"/>
                    <field name="sla_ids" widget="many2many_tags"/>
                    <field name="sla_status" readonly="1"/>
<!--                     <field name="level"/> -->
                </xpath>
                <xpath expr="//field[@name='sale_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//notebook/page[@name='other_info']" position="after">
                    <page name="sla_status_page" string="SLA Status">
                        <field name='sla_status_lines' readonly='1' force_save="1">
                            <tree>
                                <field name='name'/>
                                <field name='completion_date'/>
                                <field name='completion_stage'/>
                                <field name='sla_status'/>
                            </tree>
                        </field>
                        
                    </page>
                </xpath>
                
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="widget">0</attribute>
                </xpath>
                
        </field>
    </record>
      
    <record model="ir.ui.view" id="view_project_task_form_inh">
        <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='description_page']" position="attributes">
                    <attribute name="string">Remedy</attribute>               
                </xpath>
                <xpath expr="//notebook/page[@name='description_page']/field[@name='description']" position="replace">
                    <field name='remedy_description'/>              
                </xpath>
        </field>
    </record>
      
      

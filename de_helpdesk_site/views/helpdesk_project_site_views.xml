<odoo>
    <record id="view_project_task_form_contact_inherit" model="ir.ui.view">
         <field name="name">project.task.view.form.repair.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="de_helpdesk_repair_mgmt.view_project_task_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="contact_name" attrs="{'invisible': [('is_workorder', '=', True)]}"/>
                    <field name="contact_no" attrs="{'invisible': [('is_workorder', '=', True)]}"/>
                </xpath>
        </field>
    </record>
</odoo>
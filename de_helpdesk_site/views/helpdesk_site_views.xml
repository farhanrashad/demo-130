<odoo>
    <record id="ticket_view_form_inherit" model="ir.ui.view">
        <field name="name">ticket.view.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_email']" position="after">
                <field name="reference"/>
            </xpath>
            <xpath expr="//page[@name='description']" position="after">
                <page name="site_information" string="Customer Details">
                    <group>
                        <group string="Site">
                            <field name="distributor"/>
                            <field name="site_name"/>
                            <field name="contact_name"/>
                            <field name="contact_no"/>
                            <field name="site_address"/>
                            <field name="city"/>
                        </group>
                        <group string="Material To Equipment">
                            <field name="material"/>
                            <field name="barcode"/>
                            <field name="model"/>
                            <field name="serial"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <group string="Other Info">
                        <field name="customer_model_desc"/>
                            <field name="crmid"/>
                            <field name="reason"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>
<odoo>
     <!-- Car Brand Tree View-->
    <record id="car_brand_list_view" model="ir.ui.view">
        <field name="name">car.brand.list.view</field>
        <field name="model">car.brand</field>
        <field name="arch" type="xml">
            <tree string="Car Brand">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <!-- Car Brand Form View -->
    <record id="car_brand_form_view" model="ir.ui.view">
        <field name="name">car.brand.form.view</field>
        <field name="model">car.brand</field>
        <field name="arch" type="xml">
            <form string="Car Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    
    <!-- Car Brand View -->
    <record id="action_car_brand" model="ir.actions.act_window">
        <field name="name">Car Brand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_commission_unpaid_filter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new repair request, the first step of a new sale!
            </p>
            <p>
                Once the request is confirmed by the customer, it becomes a repair order.<br/> You will be able to work on order and create an invoice and collect the payment.
            </p>
        </field>
    </record>
    
    <menuitem name="Car Brand" id="car_brand_menu" parent="menu_car_repair_configuration"  action="action_car_brand" />
<!--    sequence="20" -->
</odoo>
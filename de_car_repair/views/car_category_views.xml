<odoo>
     <!-- Car Category Tree View-->
    <record id="car_category_list_view" model="ir.ui.view">
        <field name="name">car.category.list.view</field>
        <field name="model">car.category</field>
        <field name="arch" type="xml">
            <tree string="Car Category">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <!-- Car Category Form View -->
    <record id="car_category_form_view" model="ir.ui.view">
        <field name="name">car.category.form.view</field>
        <field name="model">car.category</field>
        <field name="arch" type="xml">
            <form string="Car Category">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    
    <!-- Car Category View -->
    <record id="action_car_category" model="ir.actions.act_window">
        <field name="name">Car Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_commission_unpaid_filter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new repair request, the first step of a new sale!
            </p>
            <p>
                Once the request is confirmed by the customer, it becomes a repair order.<br/> You will be able to work on order and create an invoice and collect the payment.
            </p>
        </field>
    </record>
    
    <menuitem name="Car Category" id="car_category_menu" parent="menu_car_repair_configuration"  action="action_car_category" sequence="30"
/>
</odoo>
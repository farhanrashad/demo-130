<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fbr_invoice_report_wizard_view_form" model="ir.ui.view">
            <field name="name">fbr.invoice.report.wizard.form</field>
            <field name="model">fbr.invoice.report.wizard</field>
            <field name="arch" type="xml">
                <form string="FBR Invoice Report">
                    <group>
                        <group >
                            <field name="start_at"/>
                            <field name="shop_ids" widget="many2many_tags"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_fbr_invoice_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_fbr_invoice_report" model="ir.actions.act_window">
            <field name="name">FBR Invoice Report</field>
            <field name="res_model">fbr.invoice.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_fbr_invoice_report"
            action="action_fbr_invoice_report"
            parent="point_of_sale.menu_point_rep"
            sequence="80"
        />
    </data>
</odoo>
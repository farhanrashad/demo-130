<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_tamplate_estimates" model="mail.template">
            <field name="name">Estimates: Send by email</field>
            <field name="model_id" ref="de_sales_estimation.model_sale_estimate"/>
            <field name="email_from">${(object.user_id.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Estimates (Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear

                        ${object.partner_id.name}

                        <br/>

                        Here is your estimate ${object.seq_name} amount From dynexcel
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        You can reply to this email if you have any questions.
                        Thank you.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="sale_estimates_reprot"/>
            <field name="report_name">
                Sale Estimate_${(object.name)}
            </field>
        </record>
    </data>
</odoo>

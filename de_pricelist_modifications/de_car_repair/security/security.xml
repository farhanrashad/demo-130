<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record
			id="ir_category_car_repair_security"
			model="ir.module.category">
		    <field name="name">Car Repair</field>
		</record>

		<record id="group_repair_user" model="res.groups">
		    <field name="name">User</field>
		    <field name="category_id" ref="ir_category_car_repair_security"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
		</record>

		<record id="group_repair_manager" model="res.groups">
		    <field name="name">Manager</field>
		    <field name="category_id" ref="ir_category_car_repair_security"/>
    		<field name="implied_ids" eval="[(4, ref('group_repair_user')),(4, ref('sales_team.group_sale_manager'))]"/>
    		<field name="users" eval="[(4, ref('base.user_root'))]"/>
		</record>
	</data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="product_stock_report_wizard_view" model="ir.ui.view">
        <field name="name">product.stock.report.wizard.view</field>
        <field name="model">report.product.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Stock">
                <group>
                    <group>
                        <field name="dated"/>
                    </group>
                    <group>
                        <field name="product_id" />
                    </group>
                </group>
                <group string="Select Categories">
                    <!--<label string="(If you do not select any categories it will take all categories)" colspan="4" />-->
                    <field name="categ_ids" nolabel="1">
                        <tree string="Products">
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_stock_report" model="ir.actions.act_window">
        <field name="name">Product Stock Report</field>
        <field name="res_model">report.product.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_partner_stock_report" name="Product Stock Report" parent="stock.menu_warehouse_report" action="action_product_stock_report" sequence="150" />
</odoo>
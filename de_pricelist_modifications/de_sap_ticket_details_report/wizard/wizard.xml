<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_excel_views" model="ir.ui.view">
        <field name="name">wizard.reports</field>
        <field name="model">wizard.reports</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket Details Report">
            <group>
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="stage"/>
                </group>
                <p class="oe_grey">
                    You want to Print Helpdesk Ticket Details Report?
                </p>
                <footer>
                    <button string="Print Excel Report" class="btn-primary"
                        name="action_purchase_report" type="object" />
                    <button string="Cancel" class="btn-primary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>


    <record id="action_ticket_report" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket Details Report</field>
        <field name="res_model">wizard.reports</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="purchase_excel_views"/>
        <field name="target">new</field>
    </record>
     <report
            id="stock_xlsx"
            model="helpdesk.ticket"
            string="Helpdesk Ticket Details Report "
            menu="False"
            report_type="xlsx"
            name="de_sap_ticket_details_report.stock_report_xls"
            file="de_sap_ticket_details_report.stock_report_xls"
            attachment_use="False"
        />
    
    <menuitem id="menu_ticket_report_helpdesk" name="Helpdesk Ticket Details Report" action="action_ticket_report" parent="de_helpdesk.helpdesk_ticket_config_main_menu" /> 
   
</odoo>

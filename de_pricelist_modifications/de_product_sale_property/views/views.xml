<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="open_product_property_form" model="ir.ui.view">
                <field name="name">product Property Form</field>
                <field name="model">product.property</field>
                <field name="arch" type="xml">
                    <form string="Product Property Form">
                      <sheet>
                        <group col="4">
                        <field name="name" />
                          <field name="is_long_value" />
                          <field name="is_short_value" />
                          <field name="long_value" widget="many2many_tags"/>
                          <field name="short_value" widget="many2many_tags"/>
                        </group>
                        
                    </sheet>
                
                   </form>
                </field>
                </record>
            
            <record id="open_product_property_tree" model="ir.ui.view">
                <field name="name">Product Property Tree</field>
                <field name="model">product.property</field>
                <field name="arch" type="xml">
                    <tree string="Product Property Tree">
                          <field name="name" />
                          <field name="is_long_value" />
                          <field name="is_short_value" />
                          <field name="long_value" />
                          <field name="short_value" />
                      
                    </tree>
                </field>
            </record>
            
          
   
            
               
            <record id="open_product_property_line" model="ir.actions.act_window">
                <field name="name">Product Property Form</field>
                <field name="res_model">product.property</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_property_tree"/>
            </record>
            


            <menuitem id="menu_view_product_property_form"
            action="open_product_property_line"
            name="Product Property"
            parent="sale.menu_sale_config"
            />
       
        
        
         <record id="open_product_long_form" model="ir.ui.view">
                <field name="name">product Long Form</field>
                <field name="model">product.long</field>
                <field name="arch" type="xml">
                    <form string="Product Long Form">
                      <sheet>
                        <group col="4">
                            <field name="name" />
                          
                        </group>
                        
                    </sheet>
                
                   </form>
                </field>
                </record>
            
            <record id="open_product_long_tree" model="ir.ui.view">
                <field name="name">Product Long Tree</field>
                <field name="model">product.long</field>
                <field name="arch" type="xml">
                    <tree string="Product Long Tree">
                        <field name="name"/>
                      
                    </tree>
                </field>
            </record>
            
          
   
            
               
            <record id="open_product_long_line" model="ir.actions.act_window">
                <field name="name">Product Long Form</field>
                <field name="res_model">product.long</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_long_tree"/>
            </record>
            


            <menuitem id="menu_view_product_long_form"
            action="open_product_long_line"
            name="Product Long Value"
            parent="sale.menu_sale_config"
            />
       
      <record id="open_product_short_form" model="ir.ui.view">
                <field name="name">product Short Form</field>
                <field name="model">product.short</field>
                <field name="arch" type="xml">
                    <form string="Product Short Form">
                      <sheet>
                        <group col="4">
                            <field name="name" />
                          
                        </group>
                        
                    </sheet>
                
                   </form>
                </field>
                </record>
            
            <record id="open_product_short_tree" model="ir.ui.view">
                <field name="name">Product Short Tree</field>
                <field name="model">product.short</field>
                <field name="arch" type="xml">
                    <tree string="Product Short Tree">
                        <field name="name"/>
                      
                    </tree>
                </field>
            </record>
            
          
   
            
               
            <record id="open_product_short_line" model="ir.actions.act_window">
                <field name="name">Product Short Form</field>
                <field name="res_model">product.short</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_short_tree"/>
            </record>
            


            <menuitem id="menu_view_product_short_form"
            action="open_product_short_line"
            name="Product Short Value"
            parent="sale.menu_sale_config"
            />   
        
        
         <record id="view_product_product_custom" model="ir.ui.view">
            <field name="name">product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
               <xpath expr="//notebook" position="inside">
                  
                        <page string="Product Property">
                            <field name="product_property_order_line">
                                <tree string="Product Property " editable="bottom" >
                                        <field name="product_property" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        <field name="long_value" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        <field name="short_value" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        <field name="is_long_value"/>
                                        <field name="is_short_value"/>
                                </tree>
                            </field>
                           
                        </page>
                  
                    
                       
                    
                </xpath>
                </field>
        </record>

            
            </odoo>
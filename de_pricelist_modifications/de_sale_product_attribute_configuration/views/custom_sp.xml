<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_product_category_custom" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
               <xpath expr="//form/sheet/group/field[@name='parent_id']" position="after">
                            <field name="attribute_ids" widget="many2many_tags"/>
                            <field name="measurement"/>
   
                </xpath>
                </field>
        </record>

     <record id="open_product_measurement_order" model="ir.ui.view">
                <field name="name">product measurement Form</field>
                <field name="model">product.measurement</field>
                <field name="arch" type="xml">
                    <form string="Product Measurement Form">
                      <sheet>
                        <group col="4">
                            <field name="name" />
                          
                        </group>
                        
                        <notebook>
                        <page string="Products">
                            <field name="product_measure_line">
                                <tree string="Product Measurement Form" editable="bottom" >
                                        <field name="name"/>
                                </tree>
                            </field>
                           
                        </page>
                    </notebook>
                    </sheet>
                
                   </form>
                </field>
                </record>
            
            <record id="open_product_measurement_tree" model="ir.ui.view">
                <field name="name">Product Measurement Tree</field>
                <field name="model">product.measurement</field>
                <field name="arch" type="xml">
                    <tree string="Product Measurement Tree">
                        <field name="name"/>
                      
                    </tree>
                </field>
            </record>
            
          
   
            
               
            <record id="open_product_measurement_line" model="ir.actions.act_window">
                <field name="name">Product Measurement Form</field>
                <field name="res_model">product.measurement</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_product_measurement_tree"/>
            </record>
            


            <menuitem id="menu_view_product_measurement_form"
            action="open_product_measurement_line"
            name="Product Measurement"
            parent="sale.menu_sale_config"
            />
        <record id="create_button_form" model="ir.ui.view">
        <field name="name">sale.order.line.product.measurement.wizard</field>
        <field name="model">sale.order.line.product.measurement</field>
        <field name="arch" type="xml">
        <form string="Measurement">
        <group>
        <field name="product_id" invisible="1"/>
        <field name="context_id" invisible="1"/>
        </group>
         <group>
                    <field name="sale_measure_line" string=' '>
                        <tree string="Measurment" editable="bottom" create="false" delete="false">
                            <field name="name"/>
                            <field name="value"/>
                        </tree>
                    </field>
                </group>
        <footer>
        <button name="confirm" string="Confirm" type="object"/>
        <button string="Cancel" class="btn-secondary" special="cancel"/>

        </footer>
        </form>
        </field>
        </record>
        
        <record id="create_button_wizard" model="ir.actions.act_window">
        <field name="name">Measurement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line.product.measurement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_button_form"/>
        <field name="target">new</field>
        </record>
        
        <record id="view_sale_order_line_inherit" model="ir.ui.view">
            <field name="name">Sale Order Line Button</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                       position="after">
                    <button name="action_show_details" type="object" string="Measurement" context="{'product': product_id}" class="oe_stat_button" icon="fa-check-square"/>
                </xpath>
            </field>
        </record>
        
        
         
        <record id="sale_product_configurator_inherit" model="ir.ui.view">
            <field name="name">sale.product.configurator.custom</field>
            <field name="model">sale.product.configurator</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale_product_configurator.sale_product_configurator_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group/field[@name='product_template_id']" position="before">
                    <field name="component_id" />
                </xpath>
            </field>
        </record>
        
            
            </odoo>
<odoo>
    <record id="ticket_view_form_inherit" model="ir.ui.view">
        <field name="name">ticket.view.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="ticket_type_id"/>
            </xpath>
           
            <xpath expr="//field[@name='partner_email']" position="after">
                <separator colspan="2" class="mt32"/>
                <field name="create_date" readonly="1"/>
                <field name="helpdesk_sla_id" readonly="0"/>
                <field name="deadline_date" />
            </xpath>
            
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="sla_status" string="SLA Time Status">
                    <field name="sla_status_ids" widget="one2many_list" readonly="1" options="{'no_create': True, 'no_create_edit':True}">
                        <tree string="SLA Status" editable="bottom">
                            <field name="helpdesk_sla_id"/>
                            <field name="stage_id" />
                            <field name="deadline"/>
                            <field name="reached_datetime"/>
                            <field name="status" invisible="1"/>
                            <field name="exceeded_days" />
                        </tree>
                    </field>
                </page>
            </xpath>
            
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="sla_log" string="SLA Log">
                    <field name="sla_log_ids" widget="one2many_list" readonly="1" options="{'no_create': True, 'no_create_edit':True}">
                        <tree string="SLA Log" editable="bottom">
                            <field name="stage_id" />
                            <field name="start_on"/>
                            <field name="end_on" />
                        </tree>
                    </field>
                </page>
            </xpath>
            
            
        </field>
    </record>
</odoo>
<odoo>
    <data>
        <template id="portal_create_ticket_inherit" name="Create Ticket" inherit_id="de_helpdesk.portal_create_ticket" priority="40">
            <xpath expr="//form/div[4]" position="after">
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label" for="reference">Reference</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control" name="reference" required="False"/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label" for="site_name">Site Name</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control" name="site_name" required="False"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label" for="contact_name">Contact Name</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control" name="contact_name" required="False"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12 col-sm-4 control-label" for="site_address">Address</label>
                        <div class="col-md-5 col-sm-4" style="display:inline-block;" >
                            <input type="text" class="form-control" placeholder="Street" name="site_address" required="False"/>
                        </div>
                       
                        <div class="col-md-3 col-sm-4" style="display:inline-block;">
                           <input type="text" class="form-control" placeholder="City" name="city" required="False"/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-12 col-sm-4 control-label" for="material">Material</label>
                        <div class="col-md-5 col-sm-8" style="display:inline-block;">
                            <input type="text" class="form-control" placeholder="Material" name="material" required="False"/>
                        </div>
                        <div class="col-md-3 col-sm-8" style="display:inline-block;">
                            <input type="text" class="form-control" placeholder="Barcode" name="barcode" required="False"/>
                        </div>
                        <div class="col-md-3 col-sm-8" style="display:inline-block;">
                            <input type="text" class="form-control" placeholder="Model" name="model" required="False"/>
                        </div>
                    </div>
            </xpath>
        </template>
        
        <template id="portal_helpdesk_ticket_page_inherit" inherit_id="de_helpdesk.portal_helpdesk_ticket_page" >
            <xpath expr="//div[hasclass('description')]" position="before">
                <div class="col-md-6 mb-0">
                    <p><strong>Reference:</strong> <span t-field="ticket.reference" /></p>
                    <p><strong>Site Name:</strong> <span t-field="ticket.site_name" /></p>
                    <p><strong>Contact Name:</strong> <span t-field="ticket.contact_name" /></p>
                    <p><strong>Address:</strong> <span t-field="ticket.site_address" />,<span t-field="ticket.region" />,<span t-field="ticket.city" /></p>
                </div>
                <div class="col-md-6 mb-0">
                    <p><strong>Material:</strong> <span t-field="ticket.material" /></p>
                    <p><strong>Barcode:</strong> <span t-field="ticket.barcode" /></p>
                    <p><strong>model:</strong> <span t-field="ticket.model" /></p>
                </div>
            </xpath>
        </template>
        <template id="portal_my_tickets_inherit" inherit_id="de_helpdesk.portal_my_tickets" >
            <xpath expr="//div[hasclass('panel')]/div/table/thead/tr/th[1]" position="after">
                <th>Ref.</th>
            </xpath>
            <xpath expr="//div[hasclass('panel')]/div/table/thead/tr/th[3]" position="after">
                <th>Site</th>
            </xpath>
            <xpath expr="//div[hasclass('panel')]/div/table/t/tr/td[1]" position="after">
                <td><span t-field="ticket.reference" /></td>
            </xpath>
            
            <xpath expr="//div[hasclass('panel')]/div/table/t/tr/td[3]" position="after">
                <td><span t-field="ticket.site_name" />-<span t-field="ticket.site_address" />,<span t-field="ticket.region" />,<span t-field="ticket.city" /></td>
            </xpath>
        </template>
    </data>
</odoo>
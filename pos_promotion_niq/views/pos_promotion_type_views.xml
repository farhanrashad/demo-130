<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pos_promotion_type_form_view" model="ir.ui.view">
            <field name="name">pos.promotion.type</field>
            <field name="model">pos.promotion.type</field>
            <field name="arch" type="xml">
                <form string="Pos Promotion">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="group"/>
                            <field name="sequence"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pos_promotion_type_tree_view" model="ir.ui.view">
            <field name="name">pos.promotion.type</field>
            <field name="model">pos.promotion.type</field>
            <field name="arch" type="xml">
                <tree string="Pos Promotion">
                    <field name="name"/>
                    <field name="group"/>
	                <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="pos_promotion_type_search_view" model="ir.ui.view">
            <field name="name">pos.promotion.type</field>
            <field name="model">pos.promotion.type</field>
            <field name="arch" type="xml">
                <search string="Pos Promotion">

                    <field name="name" string="Name"/>
                    <field name="group" string="Group"/>

                    <group expand="0" string="Group By">
                        <filter name="promotion_group" string="Promotion Group" domain="" context="{'group_by':'group'}"/>
                    </group>
                </search>
           </field>
        </record>

		<record id="pos_promotion_type_action"
		        model="ir.actions.act_window">
		    <field name="name">Promotion Type</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">pos.promotion.type</field>
		    <field name="view_mode">tree,form</field>
		</record>


		<!-- Menu promotion type config -->
		<menuitem id="pos_pos_promotion_type_menu"
		          name="Promotion Type"
		          parent="point_of_sale.menu_point_config_product"
		          action="pos_promotion_type_action"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="order_stock">
    <t t-call="web.html_container">
    <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
        <div class="page">
            <div class="oe_structure"/>
            <div align="center"> 
                <br/>                  
                <h3> Order Stock Status as on</h3> 
            </div>
            <br/>
            <table border="1" class="table table-condensed" style="border-style:solid">
                <tr style="height:30%">
                    <td style="border: 1px solid black" align="center">From Date</td>
                    <td style="border: 1px solid black" align="center"><span t-field="o.start_date"/></td>
                    <td style="border: 1px solid black" align="center">To Date</td>
                    <td style="border: 1px solid black" align="center"> <span t-field="o.end_date"/></td>
                    <td style="border: 1px solid black" align="center">Reference Order</td>
                    <td style="border: 1px solid black" align="center"> <span t-field="o.sale_id"/></td>                  
                </tr>
            </table>
            
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Invoice Date</th>
                        <th>Number</th>
                        <th>Sales Person</th>
                        <th>Due Date</th>
                        <th>Total</th>
                        <th>Amount Due</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="moves" t-as="move">
                        <tr>
                            <td><span t-field="move.product_id"/></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>                                
		    </t>
                </tbody>
            </table>
            
            
        </div>
        </t>
    </t>
    </t>
</template>
</odoo>

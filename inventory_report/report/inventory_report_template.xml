         <field name="name">stock.location.report.graph</field>
         <field name="model">report.stock.location</field>
         <field name="arch" type="xml">
             <graph string="Location Analysis">
                <field name="location_id" type="col"/>
                <field name="product_id" type="row"/>
             </graph>
         </field>
    </record> -->

    <record id="view_stock_location_search" model="ir.ui.view">
        <field name="name">stock.location.search</field>
        <field name="model">report.stock.location</field>
        <field name="arch" type="xml">
            <search string="Location Analysis">
                <field name="location_id"/>
                <field name="product_id"/>
            </search>
        </field>
    </record>

    <record id="action_stock_location_all" model="ir.actions.act_window">
        <field name="name">Stock Analysis</field>
        <field name="res_model">report.stock.location</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="view_stock_location_search"/>
        <field name="view_id"></field>
        <field name="help"></field>
    </record>

    <menuitem name="All Inventory Report" action="action_stock_location_all" id="menu_report_stock_location_all" parent="stock.menu_warehouse_report" sequence="101"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_location_pivot" model="ir.ui.view">
         <field name="name">stock.location.report.pivot</field>
         <field name="model">report.stock.location</field>
         <field name="arch" type="xml">
             <pivot string="Location Analysis" disable_linking="True">
                 <field name="location_id" type="col"/>
                 <field name="product_id"  type="row"/>
             </pivot>
         </field>
    </record>


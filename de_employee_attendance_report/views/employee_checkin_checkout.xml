<odoo>
    
    <record id="employee_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">employee.attendance.checkin.checkout</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="check_in_date" widget="date" invisible="1"/>
                <field name="check_out_date" widget="date" invisible="1"/>
            </xpath>
        </field>
    </record>
    
</odoo>
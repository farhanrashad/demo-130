<odoo>
	<template id="employee_template">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<div class="page">
					<h2 align="center">Employee Attendance Report</h2>
					<br/>
				</div>
				<br/>
				<table class="table table-condensed" style="font-size:10%;">
					<thead>
						<tr>
							<th>SNO</th>
							<th>Employee</th>
							<th>Badge ID</th>
							<th>1st Check In</th>
							<th>1st Check out</th>
							<th>2nd Chek in</th>
							<th>2nd Check out</th>
							<th>Work Hours</th>
						</tr>
					</thead>
					<tbody>
						<t t-set="i" t-value="1" />
						<t t-set="employee_exists" t-value="" />
						<t t-if="employee_ids">
							<t t-set="employee_exists" t-value="employee_ids"/>
						</t>
						<t t-else="">
							<t t-set="employee_exists" t-value="all_employees"/>
						</t>
						<t t-foreach="employee_exists" t-as='employee_id'>
							<t t-foreach="request.env['hr.employee'].search([('id', '=', employee_id)],limit=1)" t-as="emp_obj">
								<t t-foreach="date_list" t-as='single_date'>
									<tr t-foreach="get_attendance(employee_id,single_date)" t-as='att'>
										<td align="center">
											<span t-esc="i" />
										</td>
										<td>
											<span t-esc="emp_obj.name" />
										</td>
										<td>
											<span t-esc="emp_obj.barcode" />
										</td>
										<td>
											<span t-esc="att[0]" />
										</td>
										<td>
											<span t-esc="att[1]" />
										</td>
										<td>
											<span t-esc="att[2]" />
										</td>
										<td>
											<span t-esc="att[3]" />
										</td>
										<td>
											<span t-esc="att[4]" />
										</td>
										<t t-set="i" t-value="i+1" />
									</tr>
								</t>
							</t>
						</t>
					</tbody>
				</table>
				<style>
					table {
					  border-collapse: collapse;
					}
					table, td, th {
					  border: 1px solid black;
					}
					th {
					  background-color: #e9e9e9;
					}
				</style>
			</t>
		</t>
	</template>
</odoo>
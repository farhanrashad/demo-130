<odoo>
    
    <record id="view_emp_att_wizard" model="ir.ui.view">
        <field name="name">Employee Attendance Wizard</field>
        <field name="model">employee.attendance.wizard</field>
		<field name="arch" type="xml">
			<form string="Employee Attandance Report">
				<group>
					<group>
						<field name="date_from" />
                        <field name="date_to" />
						<field name="employee" widget="many2many_tags"/>
					</group>
                </group>
                            
				<footer>
					<button name="action_report_gen" type="object" string="Generate PDF" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
    
	<record id="action_emp_att_wizard" model="ir.actions.act_window">
		<field name="name">Employee Attendance</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">employee.attendance.wizard</field>
		<field name="view_id" ref="view_emp_att_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>

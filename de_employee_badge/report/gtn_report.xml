<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="hr_employee_card_badge_inherit"
        string="Print Badge"
        model="hr.employee"
        report_type="qweb-pdf"
        name="hr.employee_card_badge"
        file="hr.employee_card_badge"
        print_report_name="'Print Badge - %s' % (object.name).replace('/', '')"
    />

    <template id="hr.employee_card_badge" inherit_id="hr.print_employee_badge">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="employee">
                    <div class="col-md-6">
                        <table style="width:243pt; height:153pt; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:5pt">
                            <h1>usama</h1>
                            
                        </table>
                            
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>

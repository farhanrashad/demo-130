<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

      <record id="whatsapp_res_account_move" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                   <xpath expr="//button[@name='partner_id']" position="after">
                       <field name="invoice_active" invisible="1"/>
				</xpath>
                <div name="button_box" position="inside">
<!--                   <button name="send_msg" string="Whatsapp Message" type="object" class="oe_stat_button" icon="fa-whatsapp"/>-->
                <button class="oe_stat_button"
                            icon="fa-whatsapp"
                            name="send_msg"
                            type="object" attrs="{'invisible': [('invoice_active', '=', False)]}">
                    <field name="message_counter_invoice" widget="statinfo" string="Whatsapp"  attrs="{'invisible': [('invoice_active', '=', False)]}"/>
                </button>
                    <button class="oe_stat_button"
                            icon="fa-whatsapp"
                            name="wa_history"
                            type="object" attrs="{'invisible': [('invoice_active', '=', False)]}">
                            <field name="history_count" widget="statinfo" string="WA History" attrs="{'invisible': [('invoice_active', '=', False)]}"/>
                    </button>
                </div>
            </field>
        </record>

 </data>
</odoo>

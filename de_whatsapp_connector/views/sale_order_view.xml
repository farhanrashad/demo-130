<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="whatsapp_res_sale_order" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                       <field name="order_active" invisible="1"/>
				</xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="send_msg" type="object" string="Send Whatsapp" class="oe_highlight" attrs="{'invisible':['|',('order_active','!=',True),('state','=','cancel')]}"/>

				</xpath>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button"
                            icon="fa-whatsapp"
                            name="wa_history"
                            type="object" attrs="{'invisible':['|', ('order_active','!=',True), ('history_count','=',0)]}">
                            <field name="history_count" widget="statinfo" string="WA History" attrs="{'invisible':[('order_active','!=',True)]}"/>
                    </button>
                </div>
            </field>
        </record>


 </data>
</odoo>
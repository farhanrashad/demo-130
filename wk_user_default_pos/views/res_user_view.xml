<odoo>
    <data>
        <record id="pos_extra_utilities_inherit_res_users_form_view" model="ir.ui.view">
            <field name="name">res.users.form.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <notebook position="inside">
                <page string="Point of Sale">
                    <group>
                        <field name="pos_configs" widget="many2many_tags"/>
                    </group>
                </page>
            </notebook>
            </field>
        </record>
        <record id="view_pos_pos_form_inherit_user_default_pos" model="ir.ui.view">
            <field name="name">pos.order.form.inherit.user_default_pos</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position='replace'>
                    <header>
                        <button name="%(point_of_sale.action_pos_payment)d" string="Payment" class="oe_highlight" type="action" states="draft" groups="point_of_sale.group_pos_manager"/>
                        <button name="action_pos_order_invoice" string="Invoice" type="object"
                                attrs="{'invisible': ['|', ('invoice_group', '=', False), ('state','!=','paid')]}"/>
                        <button name="refund" string="Return Products" type="object"
                            attrs="{'invisible':[('state','=','draft')]}" groups="point_of_sale.group_pos_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,paid,done"/>
                    </header>    
                </xpath>
            </field>
        </record>

    <menuitem id="point_of_sale.menu_point_rep"
        name="Reporting"
        parent="point_of_sale.menu_point_root"
        sequence="90"
        groups="point_of_sale.group_pos_user"/>

    </data>
</odoo>
<odoo>
    <data noupdate="0">
        <record model="ir.rule" id="ir_values_pos_show_manager_rule">
            <field name="name">POS Show Manager</field>
            <field name="model_id" ref="point_of_sale.model_pos_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
        </record>

        <record model="ir.rule" id="ir_values_pos_show_user_rule">
            <field name="name">POS Show User</field>
            <field name="model_id" ref="point_of_sale.model_pos_config"/>
            <field name="domain_force">[('id', 'in', user.pos_configs.ids)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="ir_rule_pos_order_manager_wk" model="ir.rule">
            <field name="name">POS Show Manager Order</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
        </record>

        <record id="ir_rule_pos_order_user_wk" model="ir.rule">
            <field name="name">POS Show User Order</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="domain_force">[('session_id.config_id', 'in', user.pos_configs.ids)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="ir_rule_pos_payment_user_wk" model="ir.rule">
            <field name="name">POS Show User Payment</field>
            <field name="model_id" ref="point_of_sale.model_pos_payment"/>
            <field name="domain_force">[('session_id.config_id', 'in', user.pos_configs.ids)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>
        <record id="ir_rule_pos_payment_manager_wk" model="ir.rule">
            <field name="name">POS Show Manager Payment</field>
            <field name="model_id" ref="point_of_sale.model_pos_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
        </record>

        <record id="ir_rule_pos_order_user_pos_report" model="ir.rule">
            <field name="name">POS Show User Report</field>
            <field name="model_id" ref="point_of_sale.model_report_pos_order"/>
            <field name="domain_force">[('session_id.config_id', 'in', user.pos_configs.ids)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="ir_rule_pos_order_manager_pos_report" model="ir.rule">
            <field name="name">POS Show Manager Report</field>
            <field name="model_id" ref="point_of_sale.model_report_pos_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
      <record id="sale_order_approval_inherit" model="ir.ui.view">
          <field name="name">sale.order.approval</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//header" position="inside">
                   <button name="submit_for_approval" string="Submit" type="object" class="oe_highlight" states="sent"
                        groups="sales_team.group_sale_salesman"/>
                  <button name="approve_sale_order" string="Approve" type="object" class="oe_highlight" states="waiting_for_approval"
                        groups="de_approval_state.group_sale_order_approval"/>
              </xpath>
              <xpath expr="/form/header/field[@name='state']"  position="replace">
                  <field name="state" widget="statusbar" statusbar_visible="draft,sent,waiting_for_approval,sale"/>
              </xpath>
          </field>
      </record>

<odoo>
    <data>

        <record model="ir.ui.view" id="pos_config_receipt">
            <field name="name">pos.config.receipt</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[@class='row mt16 o_settings_container'][2]"
                       position="after">
                    <h2>Order Notes</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="tis_pos_order_notes" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="order_note"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="order_note" string="Order Notes"/>
                                <div class="text-muted">
                                    Notes about Order.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" >
                            <div class="o_setting_left_pane">
                                <field name="orderline_note"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="orderline_note"/>
                                <div class="text-muted">
                                  Notes on Order lines.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Don't turn this option on if you take orders on smartphones or tablets. Such devices already benefit from a native keyboard.">
                            <div class="o_setting_left_pane">
                                <field name="print_notes"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="print_notes"/>
                                <div class="text-muted">
                                   Notes printed on receipt.
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

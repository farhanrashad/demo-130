<odoo>
  <data>
     <record id="account_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">account.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']//div[@id='analytic']" position="after">
                <h2>Sequence</h2>
                 <div class="row mt16 o_settings_container" id="sequence">
                        <div class="col-12 col-lg-6 o_setting_box" title="Allows you to show sequence on Asset." groups="account.group_account_user">
                          <div class="o_setting_left_pane">
                                <field name="asset_sequence"/>
                           </div>
                            <div class="o_setting_right_pane">
                               <label for="asset_sequence"/>
                               <div class="text-muted">
                                    Sequence on Asset Form.
                               </div>
                          </div>
                     </div>
                 </div>
            </xpath>
        </field>
    </record>   
      
   
    
  </data>
</odoo>
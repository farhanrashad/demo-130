<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
 		<record id="stock_picking_form_view" model="ir.ui.view">  
			<field name="name">stock.picking.form.view</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
                <xpath expr="//button[@name='action_picking_move_tree']" position="before">
                        <button name="action_view_test" type="object" class="oe_stat_button" state='done' icon="fa-pencil-square-o"   attrs="{'invisible': [('bill_count', '=', 0)]}">
                            <field name="bill_count" widget="statinfo" string="Expense Bills"/>
                        </button>
                </xpath>
                 <xpath expr="//button[@name='action_confirm']" position="after">
				   <button string="Record Expense" name="action_record_expense" type="object" states='done' invisible="context.get('default_picking_type_id') != 16" attrs="{'invisible': [('bill_count', '=', 1)]}"   class="oe_highlight" />
				</xpath>
                
                 <xpath expr="//field[@name='group_id']" position="after">
                      <field name="journal_id" attrs="{'required': [('state', '=', 'done')]}"/>
                      <field name="record_expense" invisible="1"/>  
                </xpath>
                
<!--                 <xpath expr="//page[@name='note']" position="after">
 -->
<!--                     <page string="Accounting" invisible="context.get('default_picking_type_id') != 16">
                        <group>
                            <group>
                              <field name="credit_account_id" attrs="{'required': [('state', '=', 'done')]}"/>
                            </group>
                            <group>
                              <field name="journal_id"  attrs="{'required': [('state', '=', 'done')]}"/>
                              <field name="record_expense" invisible="1"/>  
                            </group>    
                        </group>    
                    </page> -->
<!-- 				</xpath> -->
                 <xpath expr="//field[@name='move_ids_without_package']" position="after">
                    <group class="oe_subtotal_footer" invisible="context.get('default_picking_type_id') != 16">
                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                     </group>
                </xpath> 

				<xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_id']" position="after">
					<field name="account_id"  invisible="context.get('default_picking_type_id') != 16"/>
					<field name="price_unit"  invisible="context.get('default_picking_type_id') != 16"/>
					<field name="company_id"  invisible="1" /> 
					<field name="analytic_account_id" invisible="context.get('default_picking_type_id') != 16"/>
                    <field name="analytic_tag_ids" widget="many2many_tags" invisible="context.get('default_picking_type_id') != 16"/>
				</xpath>
				<xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_uom']" position="after">
					<field name="price_subtotal" invisible="context.get('default_picking_type_id') != 16"/>
				</xpath>  
			</field>
		</record>
	</data>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pos_report_wizard_view_form" model="ir.ui.view">
            <field name="name">pos_report_wizard_view_form.form</field>
            <field name="model">pos.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Select period">
                    <group>
                        <group >
                            <field name="start_at"/>
                            <field name="shop_ids" widget="many2many_tags" groups="pos_summary_report.group_multi_shop"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_pos_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pos_summary" model="ir.actions.act_window">
            <field name="name">POS Summary</field>
            <field name="res_model">pos.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_pos_summary"
            action="action_pos_summary"
            parent="point_of_sale.menu_point_rep"
            sequence="5"
            groups="pos_summary_report.group_pos_summary" />

        <!-- <act_window id="project_report_open_wizard"
            name="Print to XLS"
            src_model="pos.order"
            res_model="pos.report.wizard"
            view_type="form"
            view_mode="form"
            key2="client_action_multi"
            context="{'active_model':'pos.order'}"
            target="new"/> -->

    </data>
</odoo>
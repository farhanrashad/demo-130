<odoo>
  <data>
      <record id="multiple_rfqs_form_view" model="ir.ui.view">
        <field name="name">purchase.order.multiple.form.view</field>
        <field name="model">purchase.order.multiple</field>
        <field name="arch" type="xml">
            <form string="Job Order Sheet">
                <header>
<!--                     <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight"
                            groups="hr.group_hr_manager"
                            states="draft"/>
                    <button name="action_completed" type="object" string="Done" class="oe_highlight"
                            states="draft,approved"/> -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Reference" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="po_created" invisible="1"/>
                        </group>
                    </group>

                    <button name="action_generate_po" type="object" string="Create PO"
                            class="oe_highlight"/>
                    <notebook>
                        <page string="Material Planing" name="job_order_sheet_lines">
                            <field name="sheet_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_name" invisible="1"/>
                                    <field name="product_quantity"/>
                                    <field name="analytic_tag_ids" widget='many2many_tags'/>
                                    <field name="vendor_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="multiple_rfqs_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.multiple.tree.view</field>
        <field name="model">purchase.order.multiple</field>
        <field name="arch" type="xml">
            <tree string="Demand Sheet">
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="multiple_rfqs_action" model="ir.actions.act_window">
        <field name="name">Multiple RFQs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.multiple</field>
        <field name="view_mode">tree,form</field>
    </record>
   
      <menuitem id="purchase_multiple_rfqs" name="Demand" parent="purchase.menu_procurement_management" action="multiple_rfqs_action" sequence="2"/>
  </data>
</odoo>
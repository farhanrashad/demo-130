<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_purchase_demand_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row justify-content-end">
                            <div class="col-12">
                                 <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-field="o.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.date"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Analytic Tags</th>
                                            <th>Vendor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <t t-foreach="o.sheet_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_quantity"/>
                                            </td>
                                             <td>
<!--                                                 <span t-field="line.qty_done"/> -->
                                            </td>
                                            <td>
                                                <span t-field="line.vendor_id"/>
                                            </td>
                                        </tr>
                                      </t>
                                    </tbody>
                                </table>
<!--                                <p style="margin: 0px; padding: 0px; font-weight: bold;">-->
<!--&lt;!&ndash;                                    <span t-field="o.note"/>&ndash;&gt;-->
<!--                                </p>-->
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="purchase_demand_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="de_purchase_multiple_rfq.report_purchase_demand_template"/>
            </t>
        </t>
    </template>
</odoo>
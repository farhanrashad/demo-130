                        <div class="oe_title">
                            <h1>
                                <field name="overtime_type_id" placeholder="Overtime Type..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <field name="date_from" />
                                <field name="type" />
                            </group>
                            <group>
                                <field name="overtime_hours" />
                                <field name="overtime_amount"/>
                                <field name="date_to"/>

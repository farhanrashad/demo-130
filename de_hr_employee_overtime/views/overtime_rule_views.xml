<odoo>
  <data>  
            <record model="ir.ui.view" id="hr_employee_overtime_type_tree_view">
            <field name="name">hr.employee.overtime.type.tree</field>
            <field name="model">hr.employee.overtime.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
      
      <record model="ir.ui.view" id="hr_employee_overtime_type_form_view">
            <field name="name">hr.employee.overtime.type.form</field>
            <field name="model">hr.employee.overtime.type</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
      

      <record model="ir.ui.view" id="hr_employee_overtime_rule_tree_view">
            <field name="name">hr.employee.overtime.rule.tree</field>
            <field name="model">hr.employee.overtime.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="overtime_type_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="department_id"/>
                    <field name="overtime_hours"/>
                    <field name="type"/>

                </tree>
            </field>
        </record>
      
      <record model="ir.ui.view" id="hr_employee_overtime_rule_form_view">
            <field name="name">hr.employee.overtime.rule.form</field>
            <field name="model">hr.employee.overtime.rule</field>
            <field name="arch" type="xml">
                <form>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_inventory_filter_inherit_dxl" model="ir.ui.view">
            <field name="name">stock.inventory.filter.inherit.dxl</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="sequence_ref"/>
                </xpath>
            </field>
        </record>
        <record id="view_inventory_form_inherit_dxl" model="ir.ui.view">
            <field name="name">stock.inventory.form.inherit.dxl</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="before">
                    <group>
                        <group>
                            <field name="sequence_ref"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_inventory_tree_inherit_dxl" model="ir.ui.view">
            <field name="name">stock.inventory.tree.inherit.dxl</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence_ref"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

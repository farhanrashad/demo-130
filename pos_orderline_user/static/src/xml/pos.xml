<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="Orderline">
        <t t-jquery="li[class*='info']:first" t-operation="append">
            <t t-if="widget.pos.config.allow_orderline_user">
                <t t-if="line.get_sale_person()">
                    <span style="float: right;">
                        <i t-attf-class="fa fa-user sale_person" style="color:green"/>
                        <t t-esc="line.get_sale_person().name"/>
                    </span>
                </t>
                <t t-if="!line.get_sale_person()">
                    <span style="float: right;">
                        <i t-attf-class="fa fa-user-plus sale_person" style="color:red"/>
                    </span>
                </t>
            </t>
        </t>
    </t>
    <t t-name="SetAllSalespersonButton">
        <span class="control-button">
            <i class="fa fa-list"></i>Salesperson
        </span>
    </t>
</templates>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quant_search_view_extended_inherit" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_tmpl_id"/>
                <field name="category_id"/>
            </field>
            <xpath expr="//filter[@name='reserved']" position="after">
                <filter string="Product Template" name="product_tmpl_id" context="{'group_by':'product_tmpl_id'}"/>
                <filter string="Category" name="category_id" context="{'group_by':'category_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
      <record id="purchase_quotation_form_inherit" model="ir.ui.view">
          <field name="name">purchase.order.quotation.report</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='partner_ref']" position="after">
                  <field name="cutomers" widget="radio"/>
                  <field name="vendor_name" attrs="{'invisible':[('cutomers','!=','foreign_vendor')]}"/>
                  <field name="quotation_ref" attrs="{'invisible':[('cutomers','!=','foreign_vendor')]}" />
			  </xpath>
               <xpath expr="//sheet//notebook//field[@name='user_id']" position="after">
                  <field name="authorized_by"/>
			  </xpath>
              
          </field>
      </record>
    </data>
</odoo>


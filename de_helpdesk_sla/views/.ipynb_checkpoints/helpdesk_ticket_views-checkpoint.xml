<odoo>
    <record id="ticket_view_form_inherit" model="ir.ui.view">
        <field name="name">ticket.view.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="ticket_type_id"/>
            </xpath>
            <xpath expr="//field[@name='partner_email']" position="after">
                <separator colspan="2" string="Deadline" class="mt32"/>
                <field name="create_date" readonly="1"/>
                <field name="sla_deadline_date" readonly="1"/>
                <field name="total_time_spent" readonly="1"/>
                
            </xpath>
        </field>
    </record>
</odoo>
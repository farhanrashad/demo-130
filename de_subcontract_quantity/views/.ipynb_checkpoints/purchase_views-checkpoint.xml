<odoo>
    <record id="purchase_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_received']" position="after">
                
                <field name="qty_issued100" optional="hide" />
                <field name="weight_issued100" optional="hide" />
                <field name="qty_issued" optional="show" />
                <field name="weight_issued" optional="show" />
                
                <field name="qty_consume" optional="show" />
                <field name="weight_consume" optional="show" />
                <field name="qty_consume100" optional="hide" />
                <field name="weight_consume100" optional="hide" />
            </xpath>
            
        </field>
    </record>
</odoo>
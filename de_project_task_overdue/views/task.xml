<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="de_project_task_overdue" model="ir.ui.view">
            <field name="name">project.project.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='138']" position="after">
                   <button name="action_send_email" string="Send Email" type="object" class="oe_highlight oe_read_only"/>
                </xpath>
                <notebook position="inside">
                    <page string="Notify">
                        <group col="4">
                            <field name="is_notify" />
                            <field name="notify_day" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
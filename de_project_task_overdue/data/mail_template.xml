<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record id="overdue_mail_template_2" model="mail.template">
            <field name="name">Task Notification</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['user_email']}</field>
            <field name="subject">Task Over Due Notification</field>
            <field name="lang">${ctx['lang']}</field>
            <field name="body_html">
            <![CDATA[
                <div>
                <table>
                      <tr>
                        <th>Month</th>
                        <th>Savings</th>
                      </tr>
                      <tr>
                        <td>${ctx['name']}</td>
                        <td>$100</td>
                      </tr>
                    </table>
                    Hello,
                    <p> New Purchase Quotation No. <strong>${ctx['purchase_no']}</strong> Customer: <strong>${ctx['customer_name']}</strong> created.</p>
                    <p> Where amount summary are as follows below:</p>
                    	<ul>
                    		<li>Untaxed Amount = ${ctx['name']}</li>

                    	</ul>
                    <p>Thank You,</p>

                </div>
            ]]>
    </field>
        </record>
    </data>
</odoo>
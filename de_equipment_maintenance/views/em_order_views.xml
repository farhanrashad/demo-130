<odoo>
    <data>
        <!-- maintenance order Tree-->
        <record id="maintenance_order_list_view" model="ir.ui.view">
            <field name="name">maintenance.order.list.view</field>
            <field name="model">maintenance.order</field>
            <field name="arch" type="xml">
                <tree string="Maintenance Order">
                    <field name="name"/>
                    <field name="equipment_id"/>
                    <field name="user_id"/>
                    <field name="date_order"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- maintenance Form -->
        <record id="maintenance_order_form_view" model="ir.ui.view">
            <field name="name">maintenance.order.form.view</field>
            <field name="model">maintenance.order</field>
            <field name="arch" type="xml">
                <form string="Repair Order">
                    <header>
                        <button string="Confirm" name="action_confirm" type="object" states="draft" class=""/>
                        <button string="Set to Draft" name="action_draft" type="object" states="cancel" class=""/>

                        <button string="Start Maintenance" name="action_start_maintenance" type="object"
                                states="confirm" class="oe_highlight"/>
                        <button string="End Maintenance" name="action_end_maintenance" type="object" states="inprocess"
                                class="oe_highlight"/>
                        <button string="Transfer Material" name="action_create_delivery" type="object" states="complete"
                                class="oe_highlight"/>
                        <button string="Create Bill" name="action_create_bill" type="object" states="complete"
                                class="oe_highlight"/>

                        <button string="Cancel" name="action_cancel" states="draft,confirm" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,inprocess,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="picking_ids" invisible="1"/>
                            <button type="object"
                                    name="action_view_delivery"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                                <field name="delivery_count" widget="statinfo" string="Delivery"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_order"/>
                                <field name="maintenance_team_id"/>
                                <field name="user_id"/>
                                <field name="equipment_id"/>
                                <field name="pfiled"/>
                                <field name="analytic_account_id"/>
                                <field name="partner_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="schedule_start_date"/>
                                <field name="schedule_end_date"/>
                                <field name="date_confirmed"
                                       attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                                <field name="date_closed"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Consumed Materials">
                                <field name="id" invisible="1"/>
                                <field name="move_lines"
                                       context="{'default_picking_id': id, 'form_view_ref':'stock.view_move_picking_form', 'default_picking_type_id': picking_type_id, 'default_location_id': location_src_id, 'default_location_dest_id': location_dest_id}">
                                    <tree decoration-danger="state != 'done' and quantity_done > reserved_availability and show_reserved_availability"
                                          decoration-muted="scrapped == True or state == 'cancel' or (state == 'done' )"
                                          string="Stock Moves" editable="bottom">
                                        <field name="name" invisible="1"/>
                                        <field name="company_id"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="date_expected" invisible="1"/>
                                        <field name="state" invisible="1" readonly="0"/>
                                        <field name="picking_type_id" invisible="1"/>
                                        <field name="location_id" invisible="1"/>
                                        <field name="location_dest_id" invisible="1"/>
                                        <field name="scrapped" invisible="1"/>
                                        <field name="picking_code" invisible="1"/>
                                        <field name="product_type" invisible="1"/>
                                        <field name="show_details_visible" invisible="1"/>
                                        <field name="show_reserved_availability" invisible="1"/>
                                        <field name="show_operations" invisible="1" readonly="1"/>
                                        <field name="additional" invisible="1"/>
                                        <field name="has_move_lines" invisible="1"/>
                                        <field name="is_locked" invisible="1"/>
                                        <field name="product_id" required="1"
                                               attrs="{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)]}"/>
                                        <field name="is_initial_demand_editable" invisible="1"/>
                                        <field name="is_quantity_done_editable" invisible="1"/>
                                        <field name="product_uom_qty" string="Initial Demand"/>
                                        <field name="reserved_availability" string="Reserved"
                                               attrs="{'column_invisible': (['|','|', ('parent.state','=', 'done'),'&amp;',])}"/>
                                        <field name="quantity_done" string="Done"
                                               attrs="{'readonly': [('is_quantity_done_editable', '=', False)]}"/>
                                        <field name="product_uom"
                                               attrs="{'readonly': [('state', '!=', 'draft'), ('additional', '=', False)]}"
                                               options="{'no_open': True, 'no_create': True}" string="Unit of Measure"
                                               groups="uom.group_uom"/>
                                        <button name="action_show_details" string="Register lots, packs, location"
                                                type="object" icon="fa-list"
                                                attrs="{'invisible': [('show_details_visible', '=', False)]}"
                                                options='{"warn": true}'/>
                                    </tree>
                                </field>
                                <button class="oe_highlight" name="put_in_pack" type="object" string="Put in Pack"
                                        attrs="{'invisible': [('state', 'in', ('draft', 'done', 'cancel'))]}"
                                        groups="stock.group_tracking_lot"/>
                            </page>
                            <page string="Services">
                                <field name="maintenance_service_ids" widget="one2many_list">
                                    <tree string="Services" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="product_cost"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Description">
                                <field name="description" placeholder="Add a description..."/>
                            </page>
                            <page string="Miscellaneous">
                                <group>
                                    <group>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="maintenance_request_id"/>
                                    </group>
                                    <group>
                                        <field name="picking_type_id"/>
                                        <field name="location_src_id"/>
                                        <field name="location_dest_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Job Order Sheet Action View -->
        <record id="action_maintenance_order" model="ir.actions.act_window">
            <field name="name">Maintenance Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new maintenance Order, the first step of a maintenance!
                </p>
                <p>
                    Once the Order is confirmed, it becomes a maintenance order.
                    <br/>
                </p>
            </field>
        </record>

        <menuitem
                id="menu_m_request_form"
                name="Maintenance Order"
                parent="maintenance.menu_m_request"
                action="action_maintenance_order"
                sequence="2"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_pmorder">
        <t t-set="o" t-value="doc"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>
                        <span>PM Order #:</span>
                        <span t-field="o.name"/>
                    </h2>

                    <div id="Equipment Details" class="row mt32 mb32">
                        <div t-if="o.equipment_id.name" class="col-3 bm-2">
                            <strong>Plant Equipment</strong>
                            <p t-field="o.equipment_id.name" class="m-0"/>
                        </div>
                        <div t-if="o.equipment_id.name" class="col-3 bm-2">
                            <strong>Equipment Category</strong>
                            <p t-field="o.equipment_id.category_id.name" class="m-0"/>
                        </div>
                        <div t-if="o.equipment_id.name" class="col-3 bm-2">
                            <strong>Used in Lcoation</strong>
                            <p t-field="o.equipment_id.location" class="m-0"/>
                        </div>
                    </div>
                    
                    <div id="Order Details" class="row mt32 mb32">
                        <div t-if="o.date_order" class="col-3 bm-2">
                            <strong>Order Date</strong>
                            <p t-field="o.date_order" class="m-0"/>
                        </div>
                        <div t-if="o.date_confirmed" class="col-3 bm-2">
                            <strong>Confirm Date</strong>
                            <p t-field="o.date_confirmed" class="m-0"/>
                        </div>
                        <div t-if="o.schedule_start_date" class="col-3 bm-2">
                            <strong>Schedule Start Date</strong>
                            <p t-field="o.schedule_start_date" class="m-0"/>
                        </div>
                        <div t-if="o.schedule_end_date" class="col-3 bm-2">
                            <strong>Schedule End Date</strong>
                            <p t-field="o.schedule_end_date" class="m-0"/>
                        </div>
                        
                        <div t-if="o.maintenance_team_id" class="col-3 bm-2">
                            <strong>Maintenance Team</strong>
                            <p t-field="o.maintenance_team_id.name" class="m-0"/>
                        </div>
                        <div t-if="o.user_id" class="col-3 bm-2">
                            <strong>Responsible</strong>
                            <p t-field="o.user_id.name" class="m-0"/>
                        </div>
                        <div t-if="o.maintenance_request_id" class="col-3 bm-2">
                            <strong>Maintenance Request</strong>
                            <p t-field="o.maintenance_request_id.name" class="m-0"/>
                        </div>
                        
                    </div>


                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>   
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="o.maintenance_part_ids">
                                <tr class="bg-200 o_line_section"><td colspan="5"><strong>Parts</strong></td></tr>
                                <tr t-foreach="o.maintenance_part_ids" t-as="line">
                                    <td>
                                        <p><span t-field="line.product_id.name" /></p>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom_qty"/>
                                        <span groups="uom.group_uom" t-field="line.product_uom_id.name"/>
                                    </td>
                                    <td class="text-right">
                                            <span t-field="line.unit_cost"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="o.maintenance_service_ids">
                                <tr class="bg-200 o_line_section"><td colspan="5"><strong>Services</strong></td></tr>
                                <tr t-foreach="o.maintenance_service_ids" t-as="service">
                                    <td>
                                        <span t-field="service.product_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="service.product_uom_qty"/>
                                        <span groups="uom.group_uom" t-field="service.product_uom_id.name"/>
                                    </td>
                                    
                                        <td class="text-right">
                                            <span t-field="service.product_cost"/>
                                        </td>
                                        
                                   
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right o_price_total">
                                            <span t-field="o.cost_total" />
                                        </td>
                                    </tr>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.description"/>
                    <div class="oe_structure"/>
                </div>
            </t>
</template>

<template id="report_pmorder2">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="de_equipment_maintenance.report_pmorder" />
        </t>
    </t>
</template>
</data>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="internal_transfer_wizard_view_form" model="ir.ui.view">
            <field name="name">internal.transfer.report.wizard.form</field>
            <field name="model">internal.transfer.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Internal Transfer Report">
                    <group>
                        <group >
                            <field name="start_at"/>
                            <field name="location_id"/>
                            <field name="category_ids" widget="many2many_tags"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                            <field name="location_dest_id"/>
                            <field name="state_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_internal_transfer_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_internal_transfer_report" model="ir.actions.act_window">
            <field name="name">Internal Transfer Report</field>
            <field name="res_model">internal.transfer.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_internal_transfer_report"
            action="action_internal_transfer_report"
            parent="stock.menu_warehouse_report"
            sequence="50"
        />
    </data>
</odoo>
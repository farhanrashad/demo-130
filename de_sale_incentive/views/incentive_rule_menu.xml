<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record model="ir.ui.view" id="aincentive_rule_tree_view">
            <field name="name">sale.incentive.rule.tree</field>
            <field name="model">sale.incentive.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="from_date"/>
                    <field name="to_date"/>

                </tree>
            </field>
        </record>

		<record id="view_sale_incentive_rule_form" model="ir.ui.view">
		    <field name="name">incentive.rule.form</field>
		    <field name="model">sale.incentive.rule</field>
		    <field name="arch" type="xml">

			    <form string="Incentive Rules">
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="from_date" />
                            </group>
                            <group>
                                <field name="to_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string='Incentive Rules'>
                                <field name="incentive_line_ids" >
                                    <tree  editable="bottom">
                                        <field name="employee_id" />
                                        <field name="incentive_id" invisible="1"/>
                                        <field name="percentage" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


		<record id="incentive_rule_menu_action" model="ir.actions.act_window">
        <field name="name">Incentive Rule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.incentive.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Incentive Rule
            </p>
        </field>
    </record>

    <menuitem name="Incentive Rule" id="incentive_rule_root_menu" parent="sale.sale_menu_root" sequence="5"/>
    <menuitem name="Incentive Rules" id="incentive_data_submenu" parent="incentive_rule_root_menu" action="incentive_rule_menu_action" sequence="1"/>
			
	</data>
</odoo>


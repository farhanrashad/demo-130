<odoo>
    <data>
        <report id="report_commission_summary_detail"
                string="Print Commission Summary"
                model="commission.form"
                name="de_pos_sales_commissions.report_custom_template"
                report_type="qweb-pdf"/>

        <!--Template for  pdf-->
        <template id="report_custom_template">
            <t t-set="net_amount" t-value="0"/>
            <t t-set="sale_amount" t-value="0"/>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2 style="text-align: center;">Commission Details</h2>
                    </div>
                    <div class="col-xs-12">
                        <table style="border:1px solid black;" class="table table-sm o_main_table">
                            <tr>
                                <td>
                                    <span style="font-size:15px;" t-esc="users[1]"/>
                                    <br/>
                                </td>
                            </tr>

                        </table>
                    </div>
                    <div>
                    </div>
                    <div>
                    </div>
                    <div class="col-xs-12">
                        <table class="table table-sm o_main_table">
                            <thead>
                                <th width="20%" style="border:1px solid black;" class="text-center">
                                    <strong>Source Document</strong>
                                </th>
                                <th width="20%" style="border:1px solid black;" class="text-center">
                                    <strong>Commission Date</strong>
                                </th>
                                <th width="20%" style="border:1px solid black;" class="text-center">
                                    <strong>Sale Amount</strong>
                                </th>
                                <th width="20%" style="border:1px solid black;" class="text-center">
                                    <strong>Amount</strong>
                                </th>
                                <th width="20%" style="border:1px solid black;" class="text-center">
                                    <strong>Pay by</strong>
                                </th>
                            </thead>
                            <tbody>
                                <t t-foreach="datacr" t-as="line">
                                    <!-- <t t-foreach="cr.invoice_line_ids12" t-as="line"> -->
                                    <tr>
                                        <td width="20%" style=" border:1px solid black;">
                                            <span t-field="line.source_document"/>
                                        </td>
                                        <td width="20%" style=" border:1px solid black;">
                                            <span t-field="line.order_date"/>
                                        </td>
                                        <td width="20%" style=" border:1px solid black;">
                                            <span t-field="line.sales_amount"/>
                                            <t t-set="sale_amount" t-value="sale_amount + line.sales_amount"/>
                                        </td>
                                        <td width="20%" style="border:1px solid black;">
                                            <span t-field="line.commission_amount"/>
                                            <t t-set="net_amount" t-value="net_amount + line.commission_amount"/>
                                        </td>
                                        <td width="20%" style=" border:1px solid black;">
                                            <span t-field="line.pay_by"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td>

                                    </td>
                                    <td>

                                    </td>
                                    <td>
                                        <strong>Total: </strong>
                                        <t t-esc="round(sale_amount, 2)"/>
                                    </td>
<!--                                    <td>-->
<!--                                        <strong>Net Amount:</strong>-->
<!--                                    </td>-->
                                    <td>
                                        <strong>Total: </strong>
                                        <t t-esc="round(net_amount, 2)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>

 
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="open_create_rule_order_form" model="ir.ui.view">
        <field name="name">Commission Rule Form</field>
        <field name="model">pos.commission.rule</field>
        <field name="arch" type="xml">
            <form string="Create Rule">
                <header>
                    <button name="action_reset" states="lock" string="Reset" groups='de_pos_sales_commissions.group_sales_commssion' type="object" class="oe_highlight"/>
                    <button name="action_lock" states="draft" string="Lock" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Rule Name..."/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="apply_on" widget="radio"/>
                        <field name="priority" attrs="{'readonly':[('state','=','lock')]}"/>
                    </group>
                    <group col="4">
                        <field name="start_date" attrs="{'readonly':[('state','=','lock')]}"/>
                        <field name="minimum_order" attrs="{'readonly':[('state','=','lock')]}"/>
                        <field name="end_date" attrs="{'readonly':[('state','=','lock')]}"/>
                        <field name="all_employees" attrs="{'readonly':[('state','=','lock')]}"/>
						<field name="existing_request_user_ids" invisible="1"/>
                    </group>

                    <notebook>
                        <page string="Beneficial(s)">
                            <field name="rule_line" attrs="{'readonly':[('state','=','lock')]}">
                                <tree string="Beneficial(s)" editable="bottom" >
                                    <field name="employee_id" />
									<field name="existing_request_user_ids" invisible="1"/>
                                    <field name="job_position"/>
                                    <field name="compute_price"/>
                                    <field name="commission_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="open_create_rule_search" model="ir.ui.view">
        <field name="name">pos.commission.rule.search</field>
        <field name="model">pos.commission.rule</field>
        <field name="arch" type="xml">
            <search string="Rule">
                <field name="start_date" />
            </search>
        </field>
    </record>

    <record id="open_create_rule_tree" model="ir.ui.view">
        <field name="name">pos.commission.rule.tree</field>
        <field name="model">pos.commission.rule</field>
        <field name="arch" type="xml">
            <tree string="Create Rule">
				<field name="name"/>
                <field name="apply_on"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="action_open_create_commission_rule" model="ir.actions.act_window">
        <field name="name">Create Commission Rule</field>
        <field name="res_model">pos.commission.rule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_create_rule_tree"/>
        <field name="search_view_id" ref="open_create_rule_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <menuitem id="menu_sale_commission"
              name="Sales Commission"
              parent="point_of_sale.menu_point_root"/>

    <menuitem id="menu_point_of_sale_customer_rule"
              name="Create Rules"
              parent="de_pos_sales_commissions.menu_sale_commission"
              action="de_pos_sales_commissions.action_open_create_commission_rule"
              sequence="0" />
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_tree_order" model="ir.ui.view">
            <field name="name">SLA Status</field>
            <field name="model">helpdesk.ticket</field>
             <field name="type">form</field>
            <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/notebook" position="inside">
     
                    
                        <page string="SLA Status">
                            <field name="status_sla_line">
                                <tree string="SLA Status" editable="bottom" >
                                        <field name="name"/>
                                        <field name="stage"/>
                                        <field name="date"/>
                                        <field name="status"/>
                                        <field name="is_success"/>
                                        <field name="is_fail"/>
                                        <field name="reached"/>
                                </tree>
                            </field>
                           
                        </page>
                        </xpath>
                   
                    
                    
               
            </field>
            </record>
            
           
        <record id="ir_send_mail_cron_scheduler_action1111" model="ir.cron">
        <field name="name">Policy disclosed</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="model_id" ref="model_helpdesk_ticket_status_sla"/>
        <field name="state">code</field>
        <field name="code">model.stage_get()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field eval="False" name="doall"/>
        
        </record>
                     
   
               
       
            </data>
          </odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="open_helpdesk_ticket_diagnosys" model="ir.ui.view">
            <field name="name">helpdesk.ticket.diagnosys12</field>
            <field name="model">helpdesk.ticket.diagnosys</field>
            <field name="arch" type="xml">
                <form string="Helpdesk Ticket Diagnosys">
                  <sheet>
                        <group col="4">
                        <field name="name"  />
                        <field name="date_to"  />
                        <field name="user_id" />
                        <field name="ticket_id" invisible="1"/>

                         </group>
                         <notebook>
                     <page string="Fault Diagnosys">
                                <tree string="Fault Diagnosys" editable="bottom" >
                                    <field name="fault" widget="html"/>                 
                                   
                                </tree>
                            
                            
                        </page>
                     <page string="Feedback">
                                <tree string="Feedback" editable="bottom" >
                                    <field name="remarks" widget="html"/>                 
                                   
                                </tree>
                            
                            
                        </page>
                        </notebook>
                </sheet>
            
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
               </form>
            </field>
            </record>
            
            <record id="open_internalprocessing_tree" model="ir.ui.view">
                <field name="name">HelpdesK Ticket Diagnosys</field>
                <field name="model">helpdesk.ticket.diagnosys</field>
                <field name="arch" type="xml">
                    <tree string="Helpdesk Ticket Diagnosys Tree">
                        <field name="name"  />
                        <field name="date_to"  />
                        <field name="user_id" />
                        <field name="ticket_id"/>
                    </tree>
                </field>
            </record>
            
            
        
         
   
               
            <record id="open_internalprocessing_order" model="ir.actions.act_window">
                <field name="name">Helpdesk Ticket Diagnosys</field>
                <field name="res_model">helpdesk.ticket.diagnosys</field>
                <field name="binding_view_types">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="open_internalprocessing_tree"/>
            </record>
            
            <menuitem action="open_internalprocessing_order" name="Helpdesk Ticket Diagnosys" id="helpdesk_ticket_diagnoysis" parent="de_helpdesk.helpdesk_ticket_menu_main" />
 
       <record id="view_helpdesk_ticket_inherit" model="ir.ui.view">
            <field name="name">helpdesk.ticket12</field>
            <field name="model">helpdesk.ticket</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="/form/header/button[@name='assign_to_me']" position="after">
                <button name="button_validated_fault" type="object" string="Fault/Diagnosys"  class="oe_highlight" />

                </xpath>
                      <xpath expr="/form/sheet/group" position="before">
                <div class="oe_button_box" name="button_box">
                <button name="open_ticket" class="oe_stat_button" icon="fa-cogs" type="object" >
                            <field name="boc_count" widget="statinfo"/>
                            </button>
                            </div>

                </xpath>                
            </field>
        </record>         
           
        </data>
        </odoo>
   


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit_check_stock" model="ir.ui.view">
            <field name="name">view.pos.config.inherit.check.stock</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='inventory_location']" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_stock"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_stock" string="Allow Check Inventory"/>
                            <div class="text-muted">
                                Check product stock on pos screen
                            </div>
                            <div class="content-group mt16" attrs="{'invisible' : [('check_stock', '=', False)]}">
                                <label for="location_ids" string="Stock Locations"/>
                                <field name="location_ids" colspan="4" nolabel="1" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

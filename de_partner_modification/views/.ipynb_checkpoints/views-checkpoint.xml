<odoo>
  <data>
      <record id="res_partner_view_inherit" model="ir.ui.view">
			<field name="name">res.partner.form.view.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//header" position="inside">
                    <field name="stage_id" widget="statusbar" clickable="True"/>
				</xpath>      
            </field>
		</record>
      
      <record id="res_partner_stage_search" model="ir.ui.view">
        <field name="name">partner.stages.search</field>
        <field name="model">partner.stages</field>
        <field name="arch" type="xml">
            <search string="Ticket Stage Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="res_partner_stage_form" model="ir.ui.view">
        <field name="name">partner.stages.form</field>
        <field name="model">partner.stages</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <header>
                </header>
                <sheet>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    <group name="main">
                        <group name="main_left">
                            <field name="active" invisible="1"/>
                            <field name="sequence"/>
                            <field name="mail_template_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="main_right">
                            <field name="closed"/>
                            <field name="unattended"/>
                        </group>
                    </group>
                    <field name="description" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_stage_tree" model="ir.ui.view">
        <field name="name">partner.stages.tree</field>
        <field name="model">partner.stages</field>
        <field name="arch" type="xml">
            <tree string="Ticket Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="mail_template_id"/>
            </tree>
        </field>
    </record>
      
      <record id="res_partner_action" model="ir.actions.act_window">
        <field name="name">Partner Stages</field>
        <field name="res_model">partner.stages</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Create a new Parner Stage
            </p>
            <p>
               Partner Stages.
            </p>
        </field>
    </record>
      
   <menuitem id="re_partner_menu" name="Partner Stages"
            parent="sale.menu_sale_config" action="res_partner_action" sequence="5"/>
  </data>
</odoo>
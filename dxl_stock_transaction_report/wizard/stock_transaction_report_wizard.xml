<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_transaction_wizard_view_form" model="ir.ui.view">
            <field name="name">stock.transaction.report.wizard.form</field>
            <field name="model">stock.transaction.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Stock Transaction Report">
                    <group>
                        <group >
                            <field name="start_at"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                        </group>
                        <group>
                            <field name="shop_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_stock_transaction_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_transaction_report" model="ir.actions.act_window">
            <field name="name">Stock Transaction Report</field>
            <field name="res_model">stock.transaction.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_stock_transaction_report"
            action="action_stock_transaction_report"
            parent="stock.menu_warehouse_report"
            sequence="60"
        />
    </data>
</odoo>
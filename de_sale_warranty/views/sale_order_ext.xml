<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_order_warranty" model="ir.ui.view">
        <field name="name">sale order warranty</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                   <button name="action_warranty_docs" type="object" class="oe_stat_button"
                           icon="fa-exchange">
                       <field name="warranty_docs" widget="statinfo"/>
                   </button>
                </div>
                <xpath expr="//header" position="inside">
                    <button name="action_warranty_renew" type="object" string="Renew Warranty"
                            class="oe_highlight"/>
                </xpath>
            </field>
    </record>

    <record id="product_product_warranty" model="ir.ui.view">
        <field name="name">product product warranty</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                   <button name="action_warranty_docs" type="object" class="oe_stat_button"
                           icon="fa-exchange">
                       <field name="warranty_docs" widget="statinfo"/>
                   </button>
                </div>
            </field>
    </record>


    <record id="res_partner_warranty" model="ir.ui.view">
        <field name="name">res partner warranty</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                   <button name="action_warranty_docs" type="object" class="oe_stat_button"
                           icon="fa-exchange">
                       <field name="warranty_docs" widget="statinfo"/>
                   </button>
                </div>
            </field>
    </record>

</odoo>
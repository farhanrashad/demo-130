<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_sales_warranty_form_view">
        <field name="name">product.template.sales.warranty.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <group string="Warranty">
                    <field name="is_warranty" />
                    <field name="warranty_policy" widget="radio" attrs="{'invisible': [('is_warranty', '==', False)], 'required': [('is_warranty','==', True)]}"/>
                    <label for="warranty_period_interval" attrs="{'invisible': [('is_warranty', '==', False)]}"/>
                    <div class="content-group">
                            <field name="warranty_period_interval" attrs="{'invisible': [('is_warranty', '==', False)], 'required': [('is_warranty','==', True)]}"/>
                            <field name="warranty_period" attrs="{'invisible': [('is_warranty', '==', False)], 'required': [('is_warranty','==', True)]}"/>
                    </div>
                </group>
            </xpath>
            
        </field>
    </record>
</odoo>

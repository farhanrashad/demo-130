<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_warranty_type_view_form" model="ir.ui.view">
        <field name="name">sale warranty view form</field>
        <field name="model">sale.warranty.type</field>
        <field name="arch" type="xml">
            <form string="Warranty Type">
                <sheet>
                    <group string="Warranty Type">
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="amount" attrs="{'invisible': [('type','!=','paid')]}"/>
                        </group>
                        <group>
                            <field name="mode" widget="radio"/>
                            <field name="product_id" attrs="{'required': [('type','==','paid')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_warranty_type_view_tree" model="ir.ui.view">
        <field name="name">sale warranty view tree</field>
        <field name="model">sale.warranty.type</field>
        <field name="arch" type="xml">
            <tree string="Warranty Type">
                <field name="name"/>
                <field name="type"/>
                <field name="mode"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_warranty_type_view_action" model="ir.actions.act_window">
        <field name="name">Warranty Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.warranty.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sale_warranty_type_view_action_menu" name="Warranty Type" parent="sales_warranty_main_menu" action="sale_warranty_type_view_action"/>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_requisition" model="ir.module.category">
        <field name="name">Requisition</field>
        <field name="description">Helps you manage requisitions</field>
        <field name="sequence">3</field>
    </record>
        
        <record id="group_purchase_demand_user" model="res.groups">
            <field name="name">Requisition User</field>
            <field name="category_id" ref="module_category_requisition"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>
        
        <record id="group_purchase_demand_manager" model="res.groups">
            <field name="name">Requisition Manager</field>
            <field name="category_id" ref="module_category_requisition"/>
            <field name="implied_ids" eval="[(4, ref('group_purchase_demand_user'))]"/>
        </record>
        
        
        <record id="purchase_demand_personal_rule" model="ir.rule">
            <field name="name">Personal Requisitions</field>
            <field ref="model_purchase_demand" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_purchase_demand_user'))]"/>
        </record>
        <record id="purchase_demand_see_all" model="ir.rule">
            <field name="name">All Orders</field>
            <field ref="model_purchase_demand" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_purchase_demand_manager'))]"/>
        </record>
        
    </data>
</odoo>
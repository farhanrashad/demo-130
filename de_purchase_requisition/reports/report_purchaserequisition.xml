<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="report_purchaserequisitions">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <h2>Purchase Requistion <span t-field="o.name"/></h2>

                    <div class="row mt32 mb32">
                        <div class="col-3">
                            <strong>Requisition Reference:</strong><br/>
                            <span t-field="o.name"/>
                        </div>
                        <div class="col-3">
                            <strong>Scheduled Ordering Date:</strong><br/>
                            <span t-field="o.date_requisition"/>
                        </div>
                        <div class="col-3">
                            <strong>Deadline:</strong><br/>
                            <span t-field="o.date_deadline"/>
                        </div>
                        <div class="col-3">
                            <strong>Requisition Type:</strong><br/>
                            <span t-esc="o.demand_type_id.name"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-3">
                            <strong>Requester:</strong><br/>
                            <span t-field="o.user_id"/>
                        </div>
                        <div class="col-3">
                            <strong>Employee:</strong><br/>
                            <span t-field="o.employee_id"/>
                        </div>
                        <div class="col-3">
                            <strong>Department:</strong><br/>
                            <span t-field="o.department_id"/>
                        </div>
                        
                    </div>

                    <t t-if="o.purchase_demand_line">
                        <h3>Products</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th><strong>Description</strong></th>
                                    <th class="text-right"><strong>Qty</strong></th>
                                    <th class="text-center" groups="uom.group_uom">
                                        <strong>Product UoM</strong>
                                    </th>
                                    <th class="text-right"><strong>Scheduled Date</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.purchase_demand_line" t-as="line_ids">
                                    <td>
                                        [ <span t-field="line_ids.product_id.code"/> ]
                                        <span t-field="line_ids.product_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line_ids.product_uom_qty"/>
                                    </td>
                                    <t>
                                        <td class="text-center" groups="uom.group_uom">
                                            <span t-field="line_ids.product_uom.category_id.name"/>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <span t-field="line_ids.schedule_date"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    
                    <t t-if="o.purchase_ids">
                        <h3>Requests for Quotation Details</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th><strong>Vendor </strong></th>
                                    <th><strong>Date</strong></th>
                                    <th class="text-right"><strong>Reference </strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.purchase_ids" t-as="purchase_ids">
                                    <td>
                                        <span t-field="purchase_ids.partner_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="purchase_ids.date_order"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="purchase_ids.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
   </template>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="mom_email_wizard" model="ir.ui.view">
          <field name="name">mom.send.email.wizard</field>
          <field name="model">mom.mail.wizard</field>
          <field name="arch" type="xml">
              <form string="Cancel Order">
                  <group>
<!--                      <field name="name_xyz"/>-->
                  </group>
                <footer>
                        <button string="Cancel" class="btn_primary" special="cancel"/>
                </footer>
              </form>
          </field>
        </record>

        <record id="mom_send_mail" model="ir.actions.act_window">
            <field name="name">MOM : Send by Email</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mom_email_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>
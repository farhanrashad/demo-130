<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="whatsapp_sale_order" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[@name='button_box']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="send_msg" string="Whatsapp Message" type="object" class="oe_stat_button" icon="fa-whatsapp"/>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="whatsapp_sale_order_whatsapp" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
<!--                <field name="date_order" position="after">-->
<!--                </field>-->
               <xpath expr="/form/sheet/group/group/field[@name='date_order']" position="after">
                  <field name="mobile_sale" widget="phone"/>


                </xpath>
            </field>
        </record>

    </data>
</odoo>
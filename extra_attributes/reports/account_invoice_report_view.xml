<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_report_search_extra_attribute" model="ir.ui.view">
        <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
        <field name="model">account.invoice.report</field>
        <field name="arch" type="xml">
            <filter name="category_product" position="after">
                <filter string="Fabric" name="fabric"
                        context="{'group_by':'product_fabric_id'}"/>
               	<filter string="Product Quality" name="quality"
                        context="{'group_by':'product_quality_id'}"/>
               	<filter string="Season" name="season"
                        context="{'group_by':'product_season_id'}"/>
                <filter string="Year" name="year"
                        context="{'group_by':'product_year_id'}"/>
                <filter string="Launch Date" name="launch_date"
                        context="{'group_by':'launch_date'}"/>
            </filter>
        </field>
    </record>

</odoo>

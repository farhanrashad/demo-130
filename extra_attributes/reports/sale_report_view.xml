<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_product_search" model="ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <filter name="date" position="after">
                <separator/>
                <filter string="Fabric" name="product_fabric_id" domain="[]" context="{'group_by':'product_fabric_id'}"/>
                <filter string="Product Quality" name="product_quality_id" domain="[]" context="{'group_by':'product_quality_id'}"/>
                <filter string="Season" name="product_season_id" domain="[]" context="{'group_by':'product_season_id'}"/>
                <filter string="Year" name="product_year_id" domain="[]" context="{'group_by':'product_year_id'}"/>
                <filter string="Launch Date" name="launch_date" domain="[]" context="{'group_by':'launch_date'}"/>
                <filter string="Fit" name="product_fit_id" domain="[]" context="{'group_by':'product_fit_id'}"/>
                <filter string="Fabric Composition" name="fabric_consumption_id" domain="[]" context="{'group_by':'fabric_consumption_id'}"/>
                <filter string="Collection" name="collection_id" domain="[]" context="{'group_by':'collection_id'}"/>
                <filter string="Style" name="style_id" domain="[]" context="{'group_by':'style_id'}"/>
            </filter>
        </field>
    </record>

</odoo>

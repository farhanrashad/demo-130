<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="collection_view" model="ir.ui.view">
			<field name="name">collection.view</field>
			<field name="model">attribute.collection</field>
			<field name="arch" type="xml">
				<form>
	                <sheet>
	                	<group>
	                		<group>
	                			<field name="name"/>
	                		</group>
	                	</group>
	                </sheet>
            </form>
			</field>
		</record>
		<record id="collection_tree_view" model="ir.ui.view">
			<field name="name">collection.tree.view</field>
			<field name="model">attribute.collection</field>
			<field name="arch" type="xml">
				<tree string="Collection">
             		<field name="name"/>
            	</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_collection">
        	<field name="name">Collection</field>
        	<field name="res_model">attribute.collection</field>
        	<field name="view_mode">tree,form</field>
    	</record>
    	<menuitem
        name="Collection"
        id="menu_collection"
        action="action_collection"
        parent="extra_attributes.extra_attribute_menu"/>
	</data>
</odoo>
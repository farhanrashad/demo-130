    </record>
    <record id="view_product_variant_tree_fabric" model="ir.ui.view">
        <field name="name">product variant tree view: add fabric</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_fabric_id"/>
                <field name="product_quality_id"/>
                <field name="product_season_id"/>
                <field name="product_year_id"/>
                <field name="launch_date"/>
                <field name="product_fit_id"/>
                <field name="fabric_consumption_id"/>
                <field name="collection_id"/>
                <field name="style_id"/>
            </field>
        </field>
    </record>
	</data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="fb_consumption_view" model="ir.ui.view">
			<field name="name">fb.consumption.view</field>
			<field name="model">fabric.consumption</field>
			<field name="arch" type="xml">
				<form>
	                <sheet>
	                	<group>
	                		<group>
	                			<field name="name"/>
	                		</group>
	                	</group>
	                </sheet>
            </form>
			</field>
		</record>
		<record id="fb_consumption_tree_view" model="ir.ui.view">
			<field name="name">fb.consumption.tree.view</field>
			<field name="model">fabric.consumption</field>
			<field name="arch" type="xml">
				<tree string="Fabric Composition">
             		<field name="name"/>
            	</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_fabric_consumption">
        	<field name="name">Fabric Composition</field>
        	<field name="res_model">fabric.consumption</field>
        	<field name="view_mode">tree,form</field>
    	</record>
    	<menuitem
        name="Fabric Composition"
        id="menu_fabric_consumption"
        action="action_fabric_consumption"
        parent="extra_attributes.extra_attribute_menu"/>
	</data>
</odoo>
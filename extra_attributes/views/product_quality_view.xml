<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="product_quality_search_form_view" model="ir.ui.view">
        <field name="name">product.quality.search.form.view</field>
        <field name="model">product.quality</field>
        <field name="arch" type="xml">
            <search string="Product Quality">
                <field name="name"/>
            </search>
        </field>
    </record>

    <act_window
        id="action_open_product_quality"
        name="Product Quality"
        res_model="product.template"
        view_mode="kanban,form,tree"
        domain="[('product_quality_id', '=', active_id)]"/>

    <act_window
        id="action_open_single_product_quality"
        name="Product Quality"
        res_model="product.quality"
        view_mode="kanban,form,tree"
        target="current"
        domain="[('quality_product_ids', 'in', active_id)]"/>

    <record id="view_product_quality_form" model="ir.ui.view">
        <field name="name">view.product.quality.form</field>
        <field name="model">product.quality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_open_product_quality)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-cubes">
                            <field name="products_count" widget="statinfo" string="Products"/>
                        </button>
                    </div>
                    <div class="oe_title">
                            <label for="name" string="Fabric" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_quality_tree" model="ir.ui.view">
        <field name="name">product.quality.tree</field>
        <field name="model">product.quality</field>
        <field name="arch" type="xml">
            <tree string="Product Quality">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_product_quality_kanban" model="ir.ui.view">
        <field name="name">product.quality.kanban</field>
        <field name="model">product.quality</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="products_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <h4>
                                    <field name="name"/>
                                </h4>
                                <div>
                                    <a name="%(extra_attributes.action_open_product_quality)d" type="action">
                                        <t t-esc="record.products_count.value"/> Products
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_quality">
        <field name="name">Product Quality</field>
        <field name="res_model">product.quality</field>
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <menuitem
        name="Product Quality"
        id="menu_product_quality"
        action="action_product_quality"
        parent="extra_attributes.extra_attribute_menu"/>
	</data>
</odoo>
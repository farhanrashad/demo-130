<odoo>
	<record id="view_assign_technician_wizard_form" model="ir.ui.view">
		<field name="name">view.assign.technician.wizard.form</field>
		<field name="model">assign.task.technician</field>
		<field name="arch" type="xml">
			<form string="Assign Technician">
				<group>
					<field name = "user_id" />
				</group>
			     <footer>
	                 <button name="assign_technician" string="Assign Technician" type="object" class="btn-primary"/>
	                 <button string="Cancel" class="btn-default" special="cancel"/>
                 </footer>
				
			</form>
		</field>
	</record>
    
    <record id="action_assign_task_technician" model="ir.actions.act_window">
            <field name="name">Assign Technician</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">assign.task.technician</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_assign_technician_wizard_form"/>
            <field name="target">new</field>
        </record>
    
</odoo>

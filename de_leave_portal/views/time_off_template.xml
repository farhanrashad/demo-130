<?xml version="1.0" encoding="utf-8"?>



<odoo>
    <template id="portal_layout" name="Portal layout: approval menu entry" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'approval' or approval" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not approval else ''}">
                <a t-if="approval" t-attf-href="/my/approvals?{{ keep_query() }}">approvals</a>
                <t t-else="">approvals</t>
            </li>
            <li t-if="approval" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="approval.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home" name="Show Approvals / fifty" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Approvals</t>
                <t t-set="url" t-value="'/my/approvals'"/>
                <t t-set="placeholder_count" t-value="'approval_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_approvals" name="My Approvals">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">four</t>
            </t>
            <t t-if="not grouped_approvals">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Approvals.
                </div>
            </t>
            
            <t t-if="grouped_approvals">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_approvals" t-as="all_approvals">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Ref</th>
                                <th class="text-left">Name</th>
                                <th class="text-left">Description</th>
                                <th class="text-left">Categories</th>
                                <th class="text-left">Request Owner</th>
                                <th class="text-left">Contact</th>
                                <th class="text-center">Stage</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="all_approvals" t-as="_approval_">
                             
                                
                                <tr>
                                    <td class="text-left">
                                        #<span t-esc="_approval_.id"/>
                                    </td>
                                     <td>
                                        <a t-attf-href="/my/approval/#{_approval_.id}?{{ keep_query() }}"><span t-field="_approval_.name"/></a>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="_approval_.reason" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="_approval_.category_id.name"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="_approval_.request_owner_id.name"/>
                                    </td>
                                    
                                    <td class="text-left">
                                        <span t-esc="_approval_.partner_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-pill badge-info" title="Current stage of the Approval is " t-esc="_approval_.request_status" />
                                    </td>	
                                   <td>  
                                       
                                       
<!--                                        <t t-esc="uid">#</t> -->
                                 <t t-foreach="_approval_.approver_ids" t-as="lines">
                                    
                                    <t t-if="lines.user_id.id == uid">
                                        <t t-if="_approval_.request_status != 'approved' ">
                                             <t t-if="_approval_.request_status !=   'refused'">
                                     <a t-attf-href="/approval/accept/#{_approval_.id}?" title="Approve"><div class="btn btn-primary"><i class="fa fa-check"></i></div></a>
                                        <a t-attf-href="/approval/reject/#{_approval_.id}?" title="Refuse"><div class="btn btn-warning"><i class="fa fa-times"></i></div></a> 
                                       </t></t>
                                     </t>   
                                </t> 
                                       
                                       
                                       
                                       
<!--                                      <t t-if="_approval_.request_status != pending"> -->
                                                              
<!--                                        </t> -->
<!--                                        </t> -->
<!--                                     <t t-else="">
                                            <t t-if="_approval_.request_status == approved">
                                               <div class="btn btn-success"><i class="fa fa-thumbs-up"></i></div>
                                           </t>
                                           <t t-if="_approval_.request_status == refused">
                                               <div class="btn btn-warning"><i class="fa fa-thumbs-down"></i></div>
                                          </t>
                                           <t t-else="">
                                               <div class="btn"><i class="fa fa-stumbleupon"></i></div>
                                          </t>
                                    </t> -->
<!--                                         <a t-attf-href="/my/approval_update/#{_approval_.id}?{{ keep_query() }}"><i class="fa fa-edit"></i></a> 
                                        <a t-attf-href="/approval/delete/#{_approval_.id}?"   > <i class="fa fa-trash"></i></a> -->
                                       
<!--                                        onclick="setTimeout(location.reload.bind(location), 1)"  -->
                                       
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <div>
                                    <t class="col-lg-7 col-md-8" >
                                        <a href="/approval/create/" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Create</div> </a> 
                                    </t>
                                </div>
                            </tr>   
                        </tbody>
                    </t>
                </t>
            </t>   
            
        </t>
    </template>

    <template id="portal_my_approval" name="My Approval">
        <t t-call="portal.portal_layout">
             <t t-set="o_portal_fullwidth_alert" groups="de_approval_portal.group_time_off">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=approval.request&amp;id=%s&amp;view_type=form' % (approval.id)"/>
                </t>
            </t>

            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="approval.name" class="col-9 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="approval.id"/>)</small>
                                <div class="col-3 col-md-2 text-right">
                                    <small class="text-right">Stage:</small>
                                    <span t-field="approval.request_status" class=" badge badge-pill badge-info" title="Current stage of this Approval"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
               <t t-set="card_body">          
                    <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Date:</strong> <span t-field="approval.create_date" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="col-12 col-md-6" t-if="approval.id">
                            <strong>Category:</strong> <span t-field="approval.category_id.name" />
                        </div>
                    </div>

                    <div class="row mb-4">
                         <div class="col-12 col-md-6 pb-2">
                           
                            <div class="row">
                                
                                    <div class="col-md-6"> <strong>Request Owner : </strong>
                                        <t t-if="approval.request_owner_id">
                                            <span t-esc="approval.request_owner_id.name"/>
                                        </t>
                                    </div>
                            </div>
                             <div class="row">            
                                <div class="col-md-6"> <strong>Contact : </strong>
                                    <t t-if="approval.partner_id">
                                        <span t-esc="approval.partner_id.name"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-md-6 pb-2">
                            <strong>Active User</strong>
                            <div class="row">
                                <div class="col flex-grow-0 pr-3">
                                    <t t-if="approval.activity_user_id">
                                    <img t-if="approval.activity_user_id.image_1024" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(approval.activity_user_id.image_1024)" alt="Contact"/>
                                     </t>
                                    <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                                </div>
                                <div class="col pl-md-0">
                                    <t t-if="approval.activity_user_id">
                                        <div t-field="approval.activity_user_id" t-options='{"widget": "contact", "fields": ["name", "email", "phone"]}'/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div> 
                    <div class="row"> 
                        <div t-attf-class="col-12 col-lg-12  mb-md-0 ">
                            <hr class="mb-1"/>
                            <div class="d-flex my-2">
                                <strong>Description</strong>
                            </div>
                            <t t-if="approval.reason">                                        
                                <div class="py-1 px-2 bg-100 small" t-field="approval.reason"/>
                            </t>
                        </div> 
                    </div>
                   <div class="row"> 
                       <t t-if = "approver_user_flag">
                                <div class="offset-md-10 col-md-1">
                                    <a t-attf-href="/app/ccpt/#{approval.id}?"><i  class="btn btn-primary">Approve</i></a>
                                </div>                  
                                <div class="col-md-1">
                                    <a t-attf-href="/app/rjct/#{approval.id}?"><i class="btn btn-warning">Refuse</i></a>                   
                                </div>
                       </t>
                    </div>
               
                </t> 
            </t>

            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="approval"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>


    <template id="create_approval" name="My craet">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
        
                <t t-call="portal.portal_table">
                    <thead>
                            <tr>
                                <th class="text-left">Now you can also create new approvals from here. Good Luck</th>
                            </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                  
                                <div class="container">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 col-md-offset-2 sell-page-contact">
                                                <form id="saleForm" data-toggle="validator" action="/my/approval/save" class="mt32">
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Approval Name:</strong>
                                                                <input name="approval_name" type="text" class="form-control o_website_form_input"/>
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Location:</strong>
                                                            <input name="approval_has_loc" type="text" class="form-control o_website_form_input"/>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Date start:</strong>
                                                                <input name="date_start" type="date" class="form-control o_website_form_input"/>
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Date End:</strong>
                                                            <input name="date_end" type="date" class="form-control o_website_form_input"/>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                          <label for="environment">Category:</label>
                                                              <select class="form-control" name="approval_category_id">
                                                                    <t t-foreach="approval_data" t-as="cat">
                                                                        <option t-att-value="cat.id">
                                                                            <t t-esc="cat.name"/>
                                                                        </option>
                                                                    </t>
                                                            </select>
                                                    </div>

                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div class="col-md-2">
                                                            <button type="submit"  class="btn btn-primary pull-left">Create</button>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <t t-if="success_flag" t-call="portal.portal_docs_entry">
                                                                <t t-set="title">Approval has been Saved Success fully</t>
                                                            </t>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <a href="/my/approvals"><div class="btn btn-warning pull-right" style="float:right; height:35px;line-height:100%;">All Approvals</div></a> 
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>

                                        </div>
                                    </div>
                
                            </td>
                        </tr>
                      
                    </tbody>
                </t>
            </t>
       
    </template> 

</odoo>











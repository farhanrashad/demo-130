<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="helpdesk_ticket_kanban_view" model="ir.ui.view">
     <field name="name">helpdesk.ticket.team.kanban</field>
     <field name="model">helpdesk.ticket.team</field>
     <field name="arch" type="xml">
       <kanban class="oe_background_grey o_kanban_dashboard o_helpdesk_kanban" create="0">
         <field name="name"/>
         <field name="color"/>
         <field name="todo_ticket_ids"/>
         <field name="todo_ticket_count"/>
         <field name="unassigned_tickets"/>
         <field name="unattended_tickets"/>
         <field name="high_priority_tickets"/>
         <templates>
           <t t-name="kanban-box">
               <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}">
                    <span class="oe_kanban_color_help" t-attf-title="In #{kanban_getcolorname(record.color.raw_value)}" role="img" t-attf-aria-label="In #{kanban_getcolorname(record.color.raw_value)}"/>
                    <div t-attf-class="o_kanban_card_header">
                        <div class="o_kanban_card_header_title">
                            <div class="o_primary">
                                <a name="%(action_helpdesk_ticket_kanban_dashboard)d" type="action">
                                    <field name="name"/>
                                </a>
                            </div>
                        </div>
                        <div class="o_kanban_manage_button_section">
                            <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" /></a>
                        </div>
                   </div>
                   <div class="container o_kanban_card_content">
                       <div class="row">
                         <div class="col-6 o_kanban_primary_left" style="padding-top:20px;">
                             <button class="btn btn-primary"  name="%(action_helpdesk_ticket_dashboard_todo)d" type="action" context="{'search_default_open': 1}">
                                 <t t-esc="record.todo_ticket_count.raw_value"/> To Do
                             </button>
                         </div>
                         <div class="col-6 o_kanban_primary_right">
                             <div class="row">
                                 <div class="mb4">
                                    <a name="%(action_helpdesk_ticket_dashboard_unassigned)d" type="action" context="{'search_default_team_id': active_id, 'default_team_id': active_id}"><t t-esc="record.unassigned_tickets.raw_value"/> Unassigned Tickets</a>
                                 </div>
                                 <div class="mb4">
                                     <a name="%(action_helpdesk_ticket_dashboard_unattended)d" type="action" context="{'search_default_team_id': active_id, 'default_team_id': active_id}"><t t-esc="record.unattended_tickets.raw_value"/> Unattended Tickets</a> 
                                 </div>
                                 <div class="mb4">
                                   <a name="%(action_helpdesk_ticket_dashboard_high_priority)d" type="action" context="{'search_default_team_id': active_id, 'default_team_id': active_id}"><t t-esc="record.high_priority_tickets.raw_value"/> High Priority</a> 
                                 </div>
                                 
                             </div>
                         </div>
                 </div>
                 <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                   <div class="row">
                       <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                           <div class="o_kanban_card_manage_title">
                               <span>View</span>
                           </div>
                           <div>
                               <a name="%(action_helpdesk_ticket_kanban_dashboard)d" type="action">
                                   All
                               </a>
                           </div>

                       </div>

                   </div>
                   <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                      <div class="col-8">
                          <ul class="oe_kanban_colorpicker" data-field="color"/>
                      </div>
                  </div>


               </div>
             </div>
             </div>
           </t>
         </templates>
       </kanban>
   </field>
 </record>
</odoo>

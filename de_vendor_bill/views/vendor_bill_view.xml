<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="inherit_purchase_order_form_view" model="ir.ui.view">
            <field name="name">inherit.purchase.order.form.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_rfq_send']" position="after">
                	<button name="send_for_first_approval_button" type="object" states="draft" string="Send For 1st Approval" class="oe_highlight" />
                	<button name="first_approved_button" type="object" states="waiting approval" string="1st Approved Order" groups="de_vendor_bill.group_allow_first_approved_purchase" class="oe_highlight" />
                    <button name="send_approval_button" type="object" states="first approved" string="Send For 2nd Approval" class="oe_highlight" id="bid_confirm"/>
                </xpath> 
                
                <!-- <xpath expr="//header//button[@id='bid_confirm']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath> --> 
                <xpath expr="//header//button[@id='draft_confirm']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>    
                
                <xpath expr="//header/button[@name='button_approve']" position="attributes">
                     <attribute name="groups">de_vendor_bill.group_allow_second_approved_purchase</attribute>
                     <attribute name="string">2nd Approved Order</attribute>
                </xpath>  
                
             </field>
          </record> 
        
        

        <record id="inherit_vendor_bill_form_view" model="ir.ui.view">
            <field name="name">inherit.vendor.bill.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="send_first_approval" class="oe_highlight"  string="Send For 1st Approval" type="object" state="draft" 
                    attrs="{'invisible': ['|','|',('state', '!=', 'draft'), ('type', '!=', 'in_invoice'),('invoice_origin','=', False)]}"/>
                   
                    <button name="first_approve_bill" class="oe_highlight" 
                    attrs="{'invisible': ['|','|',('state', '!=', 'waiting'), ('type', '!=', 'in_invoice'),('invoice_origin','=', False)]}"
                    groups="de_vendor_bill.group_allow_first_approved_bill" string="1st Approve" type="object" />
                    
                    <button name="second_approve_bill" class="oe_highlight"  string="2nd Approve" type="object" 
                    groups="de_vendor_bill.group_allow_second_approved_bill" 
                    attrs="{'invisible': ['|','|',('state', '!=', 'waiting second approval'), ('type', '!=', 'in_invoice'),('invoice_origin','=', False)]}"/>
                    
                    <button name="action_reset_draft" type="object" states="waiting,waiting second approval" string="Not Approved" class="oe_highlight" id="bid_confirm" groups="de_vendor_bill.group_reset_to_draft_button"/>
                    
                </xpath>
                
                <xpath expr="//header/button[@name='action_post']" position="attributes">
                	<attribute name="attrs">{'invisible': ['|',('is_hide','!=', False),('state','!=', 'draft')]}</attribute>
                </xpath>   
                
                <!-- <xpath expr="//header/button[@name='action_post']" position="after">
                <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|','|',('state', '!=', 'draft'),('type', 'not in', ['out_invoice','entry','out_refund','in_refund','out_receipt','in_receipt'])]}"/>
                </xpath> -->
                
                <!-- <xpath expr="//header/button[@name='action_post']" position="after">
                	<button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': [('state', '!=', 'draft'), ('type', '!=', 'in_invoice'),('invoice_origin','!=', False)]}"/>
                </xpath> -->
                
                 <xpath expr="//header/button[@name='button_draft']" position="attributes">
                     <attribute name="groups">de_vendor_bill.group_show_reset_to_draft_button</attribute>
                </xpath>
                
                <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                    <attribute name='groups'>de_vendor_bill.group_can_reverse_journal_entry_button</attribute>
                </xpath>
                
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="invoice_origin" />
                    <field name="is_hide" invisible="True" />
                </xpath>
                
                <xpath expr="//field[@name='invoice_origin']" position="attributes">
                    <attribute name="readonly">False</attribute>
                    <attribute name="invisible">True</attribute>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>
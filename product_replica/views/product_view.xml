    <record id="product_template_form_view_inherit_replica" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.replica</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority">2000</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//header" position="inside">
                    <button string="CREATE B" type="object"
                        name="action_create_replica" class="btn-primary" context="{'template_id': active_id}" groups="product_replica.group_product_replica"/>
                </xpath>
            </data>
        </field>
    </record>

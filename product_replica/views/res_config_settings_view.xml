<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_replica" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.replica</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']//h2[1]" position="before">
                <h2>Product Replica</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_replica"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_replica" string="Product Replica"/>
                            <div class="text-muted">
                                Set suffix for product replica
                            </div>
                            <div class="row mt16" attrs="{'invisible': [('is_replica', '=', False)]}">
                                <label for="suffix" string="Suffix" class="col-lg-4 o_light_label"/>
                                <field name="suffix" class="oe_inline" attrs="{'required': [('is_replica', '=', True)]}"/>
                            </div>
                            <!-- <div class="row mt16" attrs="{'invisible': [('is_replica', '=', False)]}">
                                <label for="category_id" string="Category" class="col-lg-4 o_light_label"/>
                                <field name="category_id" class="oe_inline" attrs="{'required': [('is_replica', '=', True)]}"/>
                            </div> -->
                            <div class="row mt16" attrs="{'invisible': [('is_replica', '=', False)]}">
                                <label for="product_quality_id" string="Product Quality" class="col-lg-4 o_light_label"/>
                                <field name="product_quality_id" class="oe_inline" attrs="{'required': [('is_replica', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_print_recipt" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">2</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="delivery_receipt_badge"
        string="Delivery Receipt"
        model="stock.picking"
        report_type="qweb-pdf"
        name="picking_receipt.delivery_receipt"
        file="picking_receipt.delivery_receipt"
        print_report_name="'Print Badge - %s' % (object.name).replace('/', '')"
    />

    <template id="delivery_receipt">
        <t t-call="web.html_container">
            <t t-call="picking_receipt.surtex_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="row">
                        <div class="col-5">
                            <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.state" class="col-auto">
                            <strong>State:</strong>
                            <p t-field="o.state"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done" t-options='{"widget": "date"}'/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                           </t>
                        </div>
                    </div>
                    <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                        <thead>
                            <tr>
                                <th style="width:10px; font-size:14px;"><strong>Product</strong></th>
                                <th style="width:10px; font-size:14px;"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td style="width:10px;font-size:14px;">
                                    <span t-field="move.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <td style="width:10px;font-size:14px;">
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" />
                        <thead>
                            <tr>
                                <th style="width:10px; font-size:14px;"><strong>Product</strong></th>
                                <th style="width:10px; font-size:14px;" name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    Lot/Serial
                                </th>
                                <th style="width:10px; font-size:14px;" class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td style="width:10px; font-size:14px;">
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <td style="width:10px; font-size:14px;" t-if="has_serial_number and move_line.lot_name" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_name"/>
                                </td>
                                <td style="width:10px; font-size:14px;" t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_id.name"/>
                                </td>
                                <td style="width:10px; font-size:14px;" class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                        </div>
                        <div class="col-7">
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

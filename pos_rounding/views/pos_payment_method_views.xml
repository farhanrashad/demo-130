<odoo>
    <record model="ir.ui.view" id="view_pos_payment_method_view_form">
        <field name="name">pos.payment.method.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="used_for_rounding" />
                <field name="allow_rounding" attrs="{'invisible':[('used_for_rounding','=',True)]}" />                
                <field name="visible_in_pos" attrs="{'invisible':[('used_for_rounding','=',False)]}" />           
                <field name="decimal_rounding" string="Rounding" attrs="{'invisible':[('used_for_rounding','!=',True)]}" />
            </xpath>
        </field>
    </record>
</odoo>

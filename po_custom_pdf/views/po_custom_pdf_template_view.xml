			</t>
			</t>
			</t>
		</template>
		<report 
            string="PO Custom PDF" 
            id="report_po_custom_pdf" 
            model="purchase.order" 
            report_type="qweb-pdf"
            name="po_custom_pdf.po_custom_pdf_template" 
            file="po_custom_pdf.po_custom_pdf_template"
        />
        <template id="custom_product_template_matrix_id" inherit_id="product_matrix.matrix">
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//thead//tr[1]//th[1]" position="after">
        		<th>
        			<strong>Total</strong>
        		</th>
        	</xpath>
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//tbody//tr[1]" position="before">
        		<t t-set="total_qty" t-value="0.0"/>
        		<t t-set="qty" t-value="0.0"/>
        	</xpath>
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//tbody//tr[1]//t[@t-foreach='row']" position="before">
        		<t t-set="qty" t-value="0.0"/>
        	</xpath>
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//tbody//tr[1]//t[@t-foreach='row']//td[1]" position="before">
        		<t t-set="qty" t-value="qty+cell.get('qty', 0)"/>
        	</xpath>
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//tbody//tr[1]//t[@t-foreach='row']" position="after">
        		<t t-set="total_qty" t-value="total_qty+qty"/>
        		<td>
                  	<strong><span t-esc="qty"/></strong>
               	</td>
        	</xpath>
        	<xpath expr="//table[hasclass('o_view_grid','o_product_variant_grid')]//tbody//tr[1]" position="after">
        		<tr>
        			<td>
        			</td>
        			<td>
        			</td>
        			<td>
        			</td>
        			<td>
        			</td>
        			<td>
                  		<strong><span t-esc="total_qty"/></strong>
               		</td>
        		</tr>
        	</xpath>
        </template>
	</data>
</odoo>
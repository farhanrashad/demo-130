<odoo>
    
    <record id="view_emp_att_wizard" model="ir.ui.view">
        <field name="name">Employee Attendance Wizard</field>
        <field name="model">gatepass.report.wizard</field>
		<field name="arch" type="xml">
			<form string="Gatepass & Delivery report">
				<group>
					<group>
						<field name="date_from" />
                        <field name="date_to" />
						<field name="employee"/>
					</group>
                </group>
			</form>
		</field>
	</record>
    
	<record id="action_gatepass_report_wizard" model="ir.actions.act_window">
		<field name="name">Gatepass Report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">gatepass.report.wizard</field>
		<field name="view_id" ref="view_emp_att_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>

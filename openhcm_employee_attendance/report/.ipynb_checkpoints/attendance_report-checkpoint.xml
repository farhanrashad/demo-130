<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="attendance_report_templet">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<div class="page">
						<h2 align="center">Attendance Report</h2>
						<br />
                    </div>


						<br />

						<table class="table table-condensed">
							<thead>
								<tr>
									<th>SNO</th>
									<th>Employee</th>
									<th>Badge ID</th>
									<th>1st Check In</th>
									<th>1st Check out</th>
									<th>2nd Chek in</th>
									<th>2nd Check out</th>
									<th>Work Hours</th>
								</tr>
							</thead>

							<tbody>
								<!-- =================For loop start========================= -->
								<t t-set="i" t-value="1" />
								<t t-foreach="all_employees" t-as='employee_id'>
                                    <tr t-foreach="get_attendance(eployee_id)" t-as='att'>
									<td align="center">
										<span t-esc="i" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<td>
										<span t-esc="att.employee_id.name" />
									</td>
									<t t-set="i" t-value="i+1" />
								</tr>
                                </t>
							</tbody>
						</table>
						
						<style>
							table {
							  border-collapse: collapse;
							}
							
							table, td, th {
							  border: 1px solid black;
							}
							th {
							  background-color: #e9e9e9;
							}
						</style>
	
				</t>
			</t>
		</template>
	</data>
</openerp>
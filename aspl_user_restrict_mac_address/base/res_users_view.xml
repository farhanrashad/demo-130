<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record model="ir.ui.view" id="res_user_inherit_form">
            <field name="name">Users Preferences</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Allow Mac">
                        <group>
                            <field name='mac_address_restrict'/>
                        </group>
                        <field name="allow_mac_ids">
                            <tree editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="allow_mac_form_view">
            <field name="name">Allow Mac</field>
            <field name="model">user.allow.mac</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Users">
                            <field name="allow_mac_ids" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="allow_mac_form_tree" model="ir.ui.view">
            <field name="name">Allow Mac</field>
            <field name="model">user.allow.mac</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="action_user_allow_mac" model="ir.actions.act_window">
            <field name="name">Allow Mac</field>
            <field name="res_model">user.allow.mac</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menuitem_user_allow_mac" name="Allow Mac"
                  parent="base.menu_ir_property" action="action_user_allow_mac" />

	</data>
</odoo>

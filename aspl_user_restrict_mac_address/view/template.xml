<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="website_login_with_mac" inherit_id="web.login">
            <xpath expr="//form[@class='oe_login_form']" position="inside">
                 <input type="hidden" name="mac_address" id="mac_id" value=""/>
                    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
                    <script type="text/javascript">
                    $.ajax({
                        type: "GET",
                        url: 'http://localhost:8080/get_mac_address',
                        success:function(data){
                           if (data){
                              $('#mac_id').val(data)
                           }
                           else{
                                 $('#mac_id') = false
                        }
                        }
                        });
			</script>
            </xpath>
        </template>
</odoo>
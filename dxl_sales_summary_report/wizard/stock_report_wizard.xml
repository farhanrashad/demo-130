<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_summary_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.summary.report.wizard.form</field>
            <field name="model">sale.summary.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Summary Report">
                    <group>
                        <group >
                            <field name="start_at"/>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="shop_ids" widget="many2many_tags"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                            <field name="product_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_sale_summary_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_summary_report" model="ir.actions.act_window">
            <field name="name">Sale Summary Report</field>
            <field name="res_model">sale.summary.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_summary_report"
            action="action_sale_summary_report"
            parent="point_of_sale.menu_point_rep"
            sequence="80"
        />
    </data>
</odoo>
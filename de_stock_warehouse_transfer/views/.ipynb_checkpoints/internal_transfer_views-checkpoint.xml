<odoo>
  <data>
        <record model="ir.ui.view" id="internal_transfer_tree_view">
            <field name="name">stock.transit.transfer.tree</field>
            <field name="model">stock.transit.transfer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="source_warehouse_id"/>
                    <field name="location_id"/>
                    <field name="dest_warehouse_id"/>
                    <field name="date"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>
      
      <record model="ir.ui.view" id="internal_transfer_form_view">
            <field name="name">stock.transit.transfer.form</field>
            <field name="model">stock.transit.transfer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,transfer,validate"/>
                        <button name="action_transfer" states="draft" class="oe_highlight" string="Transfer" type="object"/>
                        <button name="action_validate" states="transfer" class="oe_highlight" string="Validate" type="object"/>
                        
                    </header>
                    <sheet>
                         <div class="oe_button_box" name="button_box">
                            <button type="object" name="picking_button" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':['|', ('state', '=', 'draft')]}">
                            <field name="document_id" widget="statinfo" string="Picking"/>
                        </button>
                    </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="source_warehouse_id"/>
                                <field name="location_id"/>
                                <field name="dest_warehouse_id"/>
                                
                            </group>
                            <group>
                                <field name="date"  />
                            </group>
                        </group>
                        <notebook>
                            <page string='Transfer Product'>
                                <field name="transfer_line_ids">
                                    <tree editable="bottom">
                                      <field name="product_id"/>
                                      <field name="inventory_quantity"/>
                                      <field name="tranfer_quantity"/>
                                      <field name="received_quantity" />
                                      <field name="product_uom"/>
                                      <field name="transfer_id" invisible="1"/>
                                     </tree>
                                </field>    
                            </page>    
                        </notebook>    
                        <div class="oe_title">
                            <h1>
                            </h1>
                        </div>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
      
   <record id="internal_transfer_menu_action" model="ir.actions.act_window">
        <field name="name">Internal Transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.transit.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Internal Transfer 
            </p>
        </field>
    </record>
      
    <menuitem name="Internal Transfer" id="stock_internal_transfer_menu" parent="stock.menu_stock_warehouse_mgmt" action="internal_transfer_menu_action" sequence="3"/>
  </data>
</odoo>
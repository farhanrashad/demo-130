<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="sms_send_wizard_view_form" model="ir.ui.view">
        <field name="name">sms.send.wizard.view.form</field>
        <field name="model">sms.send.wizard</field>
        <field name="arch" type="xml">
            <form string="SMS">
                <sheet>
                    <group>
                        <group>
                            <field name="is_bulk"/>
                            <field name="partner_id" attrs="{'invisible': [('is_bulk', '=', True)]}"/>
                            <field name="partner_ids" widget="many2many_tags" attrs="{'invisible': [('is_bulk', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="sms_body" string="Body">
                            <field name="message" placeholder="Write Your Message"/>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Send" name="action_send_sms" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_bulk_sms_send" model="ir.actions.act_window">
        <field name="name">Bulk Send SMS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sms.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sms_send_wizard_view_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
    </record>
</odoo>

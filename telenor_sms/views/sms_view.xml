<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_actions_server_view_form_inherit_telenor_sms"  model="ir.ui.view">
        <field name="name">ir.actions.server.view.form.inherit.telenor.sms</field>
        <field name="model">ir.actions.server</field>
        <field name="inherit_id" ref="base.view_server_action_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='link_field_id']" position="after">
                <field name="sms_template_id"
                    attrs="{'invisible': [('state', '!=', 'tel_sms')],
                            'required': [('state', '=', 'tel_sms')]}"/>
            </xpath>
        </field>
    </record>

    <record id="telenor_sms_view_tree" model="ir.ui.view">
        <field name="name">telenor.sms.tree.view</field>
        <field name="model">telenor.sms</field>
        <field name="arch" type="xml">
           <tree string="SMS" create="0" edit="0" decoration-success="state == 'send'" decoration-danger="state == 'fail'">
                <field name="partner_id"/>
                <field name="mobile"/>
                <field name="session_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


   <record id="telenor_sms_view_form" model="ir.ui.view">
        <field name="name">telenor.sms.view.form</field>
        <field name="model">telenor.sms</field>
        <field name="arch" type="xml">
            <form string="SMS">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,send,fail"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="session_id"/>
                            <field name="message_id"/>
                            <field name="error_code"/>
                        </group>
                        <group>
                            <field name="mobile"/>              
                            <field name="date"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="sms_body" string="Body">
                            <field name="message" placeholder="Write Your Message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

        <record id="action_telenor_sms" model="ir.actions.act_window">
            <field name="name">Telenor SMS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">telenor.sms</field>
            <field name="view_mode">tree,form</field>
        </record>

    <menuitem id="telenote_sms_menu_main"
        name="Telenor SMS"
        parent="base.menu_custom"
        sequence="3"/>

    <menuitem id="telenor_sms_menu"
        name="SMS"
        parent="telenote_sms_menu_main"
        sequence="3"
        action="action_telenor_sms"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_rule_sms_template_sale_manager" model="ir.rule">
        <field name="name">SMS Template: sale manager CRUD on sale order templates</field>
        <field name="model_id" ref="sms.model_sms_template"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="domain_force">[('model_id.model', '=', 'sale.order')]</field>
    </record>
    <record id="ir_rule_sms_template_pos_manager" model="ir.rule">
        <field name="name">SMS Template: pos manager CRUD on pos order templates</field>
        <field name="model_id" ref="sms.model_sms_template"/>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
        <field name="domain_force">[('model_id.model', '=', 'pos.order')]</field>
    </record>
    <record id="ir_rule_sms_template_purchase_manager" model="ir.rule">
        <field name="name">SMS Template: purchase manager CRUD on purchase order templates</field>
        <field name="model_id" ref="sms.model_sms_template"/>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="domain_force">[('model_id.model', '=', 'purchase.order')]</field>
    </record>
</odoo>

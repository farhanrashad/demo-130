<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
 		<record id="maintenance_order_form_view" model="ir.ui.view">
			<field name="name">maintenance.order.form.view</field>
			<field name="model">maintenance.order</field>
			<field name="inherit_id" ref="de_equipment_maintenance.maintenance_order_form_view"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                <div class="oe_button_box" name="button_box">
                        <button name="action_view_test" type="object" class="oe_stat_button" state='done' icon="fa-pencil-square-o"  attrs="{'invisible': [('bill_count', '=', 0)]}">
                            <field name="bill_count" widget="statinfo" string="Expense Bills"/>
                        </button>
                    </div>
                </xpath>
                 <xpath expr="//button[@name='action_confirm']" position="after">
				   <button string="Record Expense" name="action_record_expense" type="object" states="done" class="oe_highlight"/>
				</xpath>
                <xpath expr="//field[@name='maintenance_request_id']" position="after">
					<field name="debit_account_id" invisible="1"/>
					<field name="credit_account_id"/>
					<field name="journal_id"/>
                    <field name="move_id" invisible="1"/>

				</xpath>
                <xpath expr="//field[@name='maintenance_lines']" position="after">
                  <group class="oe_subtotal_footer">
                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                   </group>
                </xpath>

				<xpath expr="//field[@name='maintenance_lines']//tree//field[@name='product_id']" position="after">
					<field name="account_id"/>
					<field name="price_unit"/>
					<field name="company_id" invisible="1"/>
					<field name="analytic_account_id"/>
                    <field name="analytic_tag_ids" widget="many2many_tags"/>
				</xpath>
				<xpath expr="//field[@name='maintenance_lines']//tree//field[@name='product_uom']" position="after">
					<field name="price_subtotal"/>
				</xpath>
			</field>
		</record> 
	</data>
</odoo>
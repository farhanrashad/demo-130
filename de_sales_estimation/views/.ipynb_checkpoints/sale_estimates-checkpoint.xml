            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_estimate_new_crm" type="object" string="Estimate" class="oe_stat_button"/>
                </xpath>

            </field>
        </record>

        <record id="action_quotation_form" model="ir.actions.act_window">
            <field name="name">Create a Quotation Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.estimate</field>
            <field name="view_mode">form,tree</field>
            <!--            <field name="view_type">form</field>-->
        </record>

        <!--       Sales Estimates form View    -->
        <record id="sale_estimates_form" model="ir.ui.view">
            <field name="name">sales.estimate.form</field>
            <field name="model">sales.estimate</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" id="action_confirm" states="draft"
                                string="Confirm" class="btn-primary" type="object"/>
                        <!--                        <button name="action_quote_new" string="Create Qutation" type="object"-->
                        <button name="action_sale_quotations" string="Create Qutation" type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|','|',('state', 'in', 'draft'),('state', 'in', 'create')]}"
                        />
                         <button name="action_approved" string="Approved" type="object"
                                class="oe_highlight" attrs="{'invisible': [('state', 'in', 'draft')]}"/>

                        <!--                                context="{'default_payment_terms_id': payment_terms_id, 'default_client_ref': client_ref, 'default_est_team': est_team, 'default_est_user_id': est_user_id, 'default_est_src': est_src, 'default_sale_qute': sale_qute, 'default_est_order_line': est_order_line}"/>-->
                        <button name="action_quotation_estimate" string="Send by Email" type="object"
                                class="btn-primary"/>
                        <button name="action_cancel" states="draft,sent,create" type="object" string="Cancel"
                                attrs="{'invisible': ['|','|',('state', 'in', 'done'),('state', 'in', 'create')]}"/>
                        <button name="reset" string="Reset to Draft" type="object" class="btn-primary"
                                attrs="{'invisible': ['|','|',('state', 'not in', 'done'),('state', 'in', 'create')]}"
                        />
                        <field name="state" widget="statusbar" statusbar_visible=""
                               statusbar_colors="draft,sent,sale"/>
                    </header>
                    <sheet>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name_seq" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                <field name="payment_terms_id"
                                       attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>

                            </group>
                            <group>
                                <field name="est_date"
                                       eval="(DateTime.today() - relativedelta(months=1)).strftime('%Y-%m-%d %H:%M')"
                                       attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                <field name="est_src" invisible="1"
                                       attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                <field name="est_user_id" attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                <field name="est_team" attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                <field name="sale_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Estimation Lines">
                                <field name="est_order_line"
                                       attrs="{'readonly': [('state', 'in', ['done','create','confirm'])]}">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="est_name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="currency_id" invisible="True"/>
                                        <field name="price_subtotal" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                                <!--                               group for subtotal-->
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <!--                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">-->
                                    <label for="amount_total"/>
                                    <field name="amount_total" nolabel="1"
                                           widget='monetary' options="{'currency_field': 'currency_id'}"/>

                                    <!--                                    </div>-->
                                </group>
                            </page>
                            <page string="Notes">
                                <group name="note_group" col="6">
                                    <group colspan="4">
                                        <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <group>
                                        <field name="client_ref"
                                               attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                        <field name="opportunity_id"
                                               attrs="{'readonly': [('state', 'in', ['done','create'])]}"/>
                                    </group>

                                </group>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        Sales Estimates Tree View      -->
        <record id="sale_estimates_tree" model="ir.ui.view">
            <field name="name">sale.estimates.tree</field>
            <field name="model">sales.estimate</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name_seq" readonly="1"/>
                    <field name="partner_id"/>
                    <field name="est_date"/>
                    <field name="amount_total"/>
                    <field name="est_user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--   action for Estimates     -->
        <act_window id="sale_estimates_action"
                    name="Estimates"
                    res_model="sales.estimate"
                    view_mode="tree,form"
        />

        <!--   action for CRM Estimates     -->
        <act_window id="crm_estimates_action"
                    name="Estimates"
                    res_model="sales.estimate"
                    view_mode="tree,form"
        />

        <!--        menu name estimates in sale order     -->
        <menuitem id="sale_estimates_menu" name="Estimates" parent="sale.sale_order_menu" action="sale_estimates_action"
                  sequence="3"/>

        <!--        menu for crm estimates-->
        <menuitem id="crm_estimates_menu" name="Estimates" parent="crm.crm_menu_sales" action="crm_estimates_action"
                  sequence="3"/>
    </data>
</odoo>
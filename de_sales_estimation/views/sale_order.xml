<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        Link New Qutation to Estimate  -->
        <record id="sale_action_quotations_new" model="ir.actions.act_window">
            <field name="name">Quotation</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form,tree,graph</field>
            <field name="domain">[]</field>
            <field name="context">{}
            </field>

        </record>

        <!--         Estimate in Quotation  -->
        <record id="sale_crm_estimate_field" model="ir.ui.view">
            <field name="name">sale.estimate.field</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='technical']" position="inside">
                    <field name="estimate_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
<odoo>
<record id="view_payroll_payment_wizard_form" model="ir.ui.view">
		<field name="name">Payroll Payment wizards</field>
		<field name="model">payroll.payment.wizard</field>
		<field name="arch" type="xml">
			<form string="Payroll Payment">
					<group col="4">
						<field name="journal_id" required="True"/>
						<field name="payment_date" required="True"/>
					</group>

                <h2>Payroll Payment</h2>
<!-- 				<field name="payslip_lines"/> -->

                <field name="payslip_line" options="{'no_create': True, 'no_quick_create': True, 'no_edit':False}">
                   <tree editable="bottom" create="0" delete="0">
                       <field name="employee_id" string="Employee" readonly="1" force_save="1"/>
                       <field name="number" readonly="1" force_save="1"/>
                       <field name="name" string="Payslip" readonly="1" force_save="1"/>
                        <field name="journal_id" string="Payment Journal" readonly="1" force_save="1"/>
                       <field name="net_wage" string="Due Amount" readonly="1" force_save="1"/>
                        <field name='amount_to_pay' string="Amount To Pay"/>
                    </tree>
                </field>

					<footer>
						<button name="create_data" string="Confirm" type="object" class="btn-primary"/>
						<button  string="Close" type="object" class="btn-secondary" special="cancel"/>
					</footer>
			</form>
		</field>
	</record>
</odoo>

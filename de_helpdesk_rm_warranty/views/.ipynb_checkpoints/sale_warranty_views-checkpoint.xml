<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_warranty_task_form_inherit" model="ir.ui.view">
        <field name="name">view.sale.warranty.form.inherit</field>
        <field name="model">sale.warranty</field>
        <field name="inherit_id" ref="de_sale_warranty.view_sales_warranty_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet[1]/group[1]/group[1]" position="inside">
                <field name="task_id" invisible="1"/>
            </xpath>
            
            <xpath expr="//page[1]" position="after">
                <page name="claim" string="Claim Detail">
                    <field name="repair_planning_ids">
                          <tree string="Order lines" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name" />
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom_id"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="price_unit" />
                                </tree>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>
    
    
</odoo>

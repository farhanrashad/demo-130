<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-details-right" t-operation="after">
            <div class='client-detail'>
                <span class='label'>NTN</span>
                <input class='detail client-ntn' name='buyer_ntn' type='buyer_ntn' t-att-value='partner.buyer_ntn || ""'></input>
            </div>
            <div class='client-detail'>
                <span class='label'>CNIC</span>
                <input class='detail client-cnic' name='buyer_cnic' type='buyer_cnic'      t-att-value='partner.buyer_cnic || ""'></input>
            </div>
        </t>
    </t>
    <t t-extend="ClientDetails">
        <t t-jquery=".client-details-right" t-operation="after">
            <div class='client-detail'>
                <span class='label'>NTN</span>
                <t t-if='partner.buyer_ntn'>
                    <span class='detail client-ntn'><t t-esc='partner.buyer_ntn'/></span>
                </t>
                <t t-if='!partner.buyer_ntn'>
                    <span class='detail client-ntn empty'>N/A</span>
                </t>
            </div>
            <div class='client-detail'>
                <span class='label'>CNIC</span>
                <t t-if='partner.buyer_cnic'>
                    <span class='detail client-cnic'><t t-esc='partner.buyer_cnic'/></span>
                </t>
                <t t-if='!partner.buyer_cnic'>
                    <span class='detail client-cnic empty'>N/A</span>
                </t>
            </div>
        </t>
    </t>
    
    <t t-extend="OrderReceipt1">
        <t t-jquery=".pos-customer" t-operation="after">
            <table class="pos-cloud-customer">
                <t t-if="customer">
                    <!-- <tr>
                        <th>Customer Name </th>
                        <td><span t-esc='customer.name'/></td>
                    </tr>
                    <tr>
                        <th>Customer NTN </th>
                        <td><span t-esc='customer.buyer_ntn'/></td>
                    </tr> -->
                    <tr>
                        <th style="font-size: 12px;">CNIC </th>
                        <td style="font-size: 12px;"><span t-esc="customer.buyer_cnic or ' '"/></td>
                    </tr>
                    <!-- <tr>
                        <th>Customer Phone </th>
                        <td><span t-esc="customer.phone"/></td>
                    </tr> -->
                </t>
            </table>
            <br/>
        </t>
        <t t-jquery=".footer_date_time" t-operation="after">
            <div class="pos-receipt-contact">
                <strong><span>FBR Invoice # <span id="invoice_number"/></span></strong> 
                <t t-esc="receipt.invoice_number"/><br/>
                <strong><span>POS Registration # </span></strong> 
                <t t-esc="receipt.config.pos_machine_id"/><br/>
                <img src="/pk_pos_invoice_cloud/static/img/fbr_logo.jpg" width="130" height="120"></img>
            </div>
            <div class="pos-receipt-contact">
                <div id="qr-example"></div><br/><br/>
            </div>
            <div class="line"></div>
        </t>
    </t>
    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-customer" t-operation="after">
            <table class="pos-cloud-customer">
                <t t-if="receipt.client and receipt.orderlines.length">
                    <!-- <tr>
                        <th>Customer Name </th>
                        <td><span t-esc='receipt.client'/></td>
                    </tr>
                    <tr>
                        <th>Customer NTN </th>
                        <td><span t-esc='receipt.buyer_ntn'/></td>
                    </tr> -->
                    <tr>
                        <th style="font-size: 12px;">CNIC </th>
                        <td style="font-size: 12px;"><span t-esc="receipt.buyer_cnic or ' '"/></td>
                    </tr>
                    <!-- <tr>
                        <th>Customer Phone </th>
                        <td><span t-esc="receipt.client_phone"/></td>
                    </tr> -->
                </t>
            </table>
            <br/>
        </t>
        <t t-jquery=".footer_date_time" t-operation="after">
            <t t-if="receipt.orderlines.length">
            <div class="line"></div>
            <div class="pos-receipt-contact">
                <strong><span>FBR Invoice # <span id="invoice_number"/></span></strong> 
                <t t-esc="receipt.invoice_number"/><br/>
                <strong><span>POS Registration # </span></strong> 
                <t t-esc="pos.config.pos_machine_id"/><br/>
                <img src="/pk_pos_invoice_cloud/static/img/fbr_logo.jpg" width="130" height="120"></img>
            </div>
            <div class="pos-receipt-contact">
                <div id="qr-example"></div><br/><br/>
            </div>
        </t>
        </t>
    </t>
</templates>
<?xml version="1.0"?>
<odoo>

	<!-- inherit account payment form -->
	<record id="view_account_payment_form_tis_inherit" model="ir.ui.view">
	    <field name="name">account.payment.form.tis</field>
	    <field name="model">account.payment</field>
	    <field name="inherit_id" ref="account.view_account_payment_form"/>
	    <field name="arch" type="xml">
	    	<xpath expr="//group[@name='right_column']" position="after">
                <group name="tds_group" attrs="{'invisible': [('payment_type', '!=', 'outbound')]}">
                	<field name="tds_type" attrs="{'readonly': [('state', '!=', 'draft')],
	    								'invisible':['|',('payment_type','!=', 'outbound')]}" required="True"/> 
                    <field name="vendor_type" invisible="1"/>
                    <field name="tds_tax_id"
                           attrs="{'invisible':[('tds_type','=', 'default')],
	    			'readonly': [('state', '!=', 'draft')],
	    			'required': [('tds_type','!=','default')]}"
                           domain="[('tds','=',True)]"/>
                    <field name="tds_amt"
                           attrs="{'invisible':[('tds_type','=', 'default')]}" readonly="1"/>
                </group>
            </xpath>
	    </field>
   </record>

</odoo>
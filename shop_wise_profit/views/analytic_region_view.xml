<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
        <record id="analytic_region_view_form" model="ir.ui.view">
            <field name="name">analytic.region.view.form</field>
            <field name="model">analytic.region</field>
            <field name="arch" type="xml">
                <form string="Analytic Region">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View of branch-->
        <record id="analytic_region_view_tree" model="ir.ui.view">
            <field name="name">analytic.region.view.tree</field>
            <field name="model">analytic.region</field>
            <field name="arch" type="xml">
                <tree string="Analytic Region">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!--View action for branch form view and tree view-->
        <record id="action_analytic_region" model="ir.actions.act_window">
            <field name="name">Analytic Region</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">analytic.region</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new Analytic Region.
                </p>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="menu_analytic_region"
            name="Analytic Region"
            sequence="50"
            parent="account.menu_analytic_accounting"
            action="action_analytic_region" />

        <record id="view_account_analytic_account_form_inherit_shop" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form.inherit.shop</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="region_id"/>
                </field>
            </field>
        </record>

        <record id="view_account_form_inherit_shop_wise" model="ir.ui.view">
            <field name="name">account.account.form.inherit.shop</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="user_type_id" position="after">
                    <field name="analytic_type"/>
                </field>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="shop_wise_profit_wizard_view_form" model="ir.ui.view">
            <field name="name">shop.wise.profit.wizard.form</field>
            <field name="model">shop.wise.profit.wizard</field>
            <field name="arch" type="xml">
                <form string="Select period">
                    <group>
                        <group >
                            <field name="start_at"/>
                            <field name="region_ids" widget="many2many_tags"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                            <field name="analytic_account_ids" widget="many2many_tags" domain="[('region_id', 'in', region_ids)]"/>
                        </group>
                    </group>
                    <footer>
                        <button name="shop_wise_profit_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_shop_wise_profit" model="ir.actions.act_window">
            <field name="name">Shop Wise Profit</field>
            <field name="res_model">shop.wise.profit.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_pos_summary"
            action="action_shop_wise_profit"
            parent="account.account_reports_management_menu"
            sequence="50"/>

    </data>
</odoo>
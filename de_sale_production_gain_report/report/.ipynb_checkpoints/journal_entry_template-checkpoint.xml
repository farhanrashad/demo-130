<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_journal_entries_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                         <h2>
<!--                            <span t-if="o.state == 'posted'">Invoice</span>
                          <span t-if="o.state == 'draft'">Draft Invoice</span> -->
                          <span t-if="o.name != '/'" t-field="o.name"/>
                          </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="o.date" name="date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.state == 'posted'" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>
<!--                         style="table-layout: fixed" -->
                        <div class="row justify-content-end">
                            <div class="col-12">
                                <table class="table table-bordered" >
                                    <thead>
                                        <tr>
                                            <th>Account</th>
                                            <th>Partner</th>
                                            <th style="max-width:400px; word-wrap:break-word;">Label</th>
<!--                                             <th>Taxes</th> -->
                                            <th>Debit</th>
                                            <th>Credit</th>
                                        </tr>
                                    </thead>
<!--                                      <t t-set="qty" t-value="0"/> -->
                                     <t t-set="debit" t-value="0"/>
                                     <t t-set="credit" t-value="0"/>
                                    <tbody>
                                      <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.account_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td >
                                                <span t-field="line.name" style="max-width:300px; word-wrap:break-word;"/>
                                            </td>
<!--                                             <td>
                                                <span t-field="line.tax_ids.name"/>
                                            </td> -->
                                            <td>
                                                <span t-field="line.debit"/>
                                            </td>
                                            <t t-set="debit" t-value="debit + line.debit"/>
                                            <td>
                                                <span t-field="line.credit"/>
                                            </td>
                                            <t t-set="credit" t-value="credit + line.credit"/>
                                        </tr>
                                      </t>
                                        <tr>
                                            <td>
<!--                                                <span t-field="line.product_id"/>-->
                                            </td>
                                           
                                            <td>
<!--                                                <span t-field="line.lot_id"/>-->
                                            </td>
                                            <td>
<!--                                                 <span t-esc="qty"/> -->
                                            </td>
                                            <td>
                                                <span t-esc="debit"/>
                                            </td>
                                            <td>
                                                <span t-esc="credit"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                
                            
                                <br/>
                                <br/>   
                               <p style="margin: 0px; padding: 0px; font-weight: bold;">
                                   Remarks <span t-field="o.narration"/>
                               </p>
                                <br/>
                                <br/>   
                                <br/>   
                                <br/>   
                                <br/>  
                                <br/>   
                                <br/>   
                                
                                
                                
                                
                               <table class="table" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th style="border: 1px solid black; height: 60px">  </th>
                                            
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border: 1px solid black;  height: 60px"> </th>
                                            
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border: 1px solid black;  height: 60px"> </th>
                                            <th style="max-width:70px; word-wrap:break-word;"> </th>
                                            <th style="border: 1px solid black;  height: 60px"> </th>
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border: 1px solid black;  height: 60px"> </th>
                                        </tr>
                                        <tr>
                                            <th style="border-top: 1px solid black;"> Prepared By</th>
                                            
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border-top: 1px solid black;">Checked By</th>
                                            
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border-top: 1px solid black;">Finance Manager</th>
                                            <th style="max-width:70px; word-wrap:break-word;"> </th>
                                            <th style="border-top: 1px solid black;">Managing Director</th>
                                            <th style="max-width:100px; word-wrap:break-word;"> </th>
                                            <th style="border-top: 1px solid black;">Received By</th>
                                        </tr>
                                    </thead>
                                </table>    
                                
                               
                                
                                
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

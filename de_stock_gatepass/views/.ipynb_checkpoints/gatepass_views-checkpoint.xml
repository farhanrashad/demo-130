<odoo>

    <record model="ir.ui.view" id="stock_gatepass_tree_view">
        <field name="name">Gatepass</field>
        <field name="model">stock.gatepass</field>
        <field name="arch" type="xml">
            <tree string="Gatepass" >
                <field name="name"/>
                <field name="scheduled_date"/>
                <field name="delivery_order"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_gatepass_form_view">
        <field name="name">Gatepass</field>
        <field name="model">stock.gatepass</field>
        <field name="arch" type="xml">
            <form string="Gatepass">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'processed')]}"/>
                    <button name="action_process" string="Process" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,processed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_move_lines" icon="fa-pencil-square-o" type="object" attrs="{'invisible': [('ml_count', '=', 0)]}">
                            <field name="ml_count" string="Moves" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="o_task_name text-truncate" placeholder="Gatepass Ref..."/>
                        </h1>
		            </div>
                    <group>
                        <group>
                            <field name="scheduled_date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="delivery_order" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>
                        <group>
                            <field name="driver_name"  attrs="{'readonly': [('state', '=', 'done')]}" />
                            <field name="vehicle_no" attrs="{'readonly': [('state', '=', 'done')]}" />
                            <field name="manual_number" attrs="{'readonly': [('state', '=', 'done')]}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Stock Move">
                            <field name="gate_pass_lines" >
                                <tree string="Gate Pass Lines"  create="false"  editable ="bottom" attrs="{'readonly': [('state', '=', 'done')]}" >
                                    <field name="product_id" readonly="1"/>
                                    <field name="lot_number" readonly="1" />
                                    <field name="package_id" readonly="1" />
                                    <field name="owner"  readonly="1" />
                                    <field name="quantity_done"  readonly="1" />
                                    <field name="previous_gatepass_quantity" readonly="1" />
                                    <field name="gatepass_quantity"  attrs="{'readonly': [('state', '=', 'done')]}" />
                                    <field name="state" invisible="1"/>
                                    <field name="move_line_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
			        <field name="message_ids" widget="mail_thread"/>
	      		</div>
            </form>
        </field>
    </record>

    <record id="stock_gatepass_action" model="ir.actions.act_window">
        <field name="name">Gatepass</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.gatepass</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create A GatePass
            </p>
        </field>
    </record>

    <menuitem name="Gatepass"
              id="stock_gatepass_menu"
              parent="stock.menu_stock_warehouse_mgmt"
              action="stock_gatepass_action"
              sequence="30"
    />

</odoo>
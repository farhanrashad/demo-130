<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="gate_pass_report">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">

				<div class="pos-center-align" style="text-align: center;">
					<h2>
						<t t-esc="docs.name" />
					</h2>
				</div>

				<br />
				<div>
					<div style="width: 50%; float:left; ">
						<tr>
							<th>
								<b>Schedule Date:</b>
							</th>
							<td>
								<t t-esc="docs.scheduled_date" />
							</td>
						</tr>
						<br />
						<tr>
							<th>
								<b>Reference:</b>
							</th>
							<td>
								<t t-esc="docs.delivery_order.name" />
							</td>
						</tr>
					</div>
					<div style="width: 20%; float:right; ">
						<tr>
							<th>
								<b>Driver:</b>
							</th>
							<td>
								<t t-esc="docs.driver_name" />
							</td>
						</tr>
						<br />
						<tr>
							<th>
								<b>Vehicle:</b>
							</th>
							<td>
								<t t-esc="docs.vehicle_no" />
							</td>
						</tr>
                                                <br/>
                                                <tr>
							<th>
								<b>Manual Gatepass Number:</b>
							</th>
							<td>
								<t t-esc="docs.manual_number" />
							</td>
						</tr>
					</div>
				</div>
				<br />
				<br />


				<table class="table table-condensed">
					<thead>
						<tr>
							<th>Product</th>
							<th>Lot Number</th>
                                                        <th>Source Package</th>
							<th>Owner</th>
							<th>Quantity Done</th>
							<th>GP Qty</th>
						</tr>
					</thead>
					<tbody>
						<t t-foreach="docs" t-as='doc'>
							<t t-foreach="doc.gate_pass_lines" t-as='o'>
								<tr>
									<td>
										<t t-esc="o.product_id.name" />
									</td>
									<td>
										<t t-esc="o.lot_number.name" />
									</td>
                                                                        <td>
										<t t-esc="o.package_id.name" /> <br/>
                                                                              
										<t t-esc="o.package_id.shipping_grade" />
									</td>
									
									<td>
										<t t-esc="o.owner.name" />
									</td>
									<td>
										<t t-esc="o.quantity_done" />
									</td>
									<td>
										<t t-esc="o.gatepass_quantity" />
									</td>
								</tr>
							</t>
						</t>
					</tbody>
                                  <br/>
                                  <br/>
                                 
                                  
				</table>
                            <div class="row" >
			     <div style="margin-top:20%;">
				<div style="float:left; margin-left: 20px;">
				<span t-field="docs.create_uid.name" style="text-decoration: underline;"/>
                  			
                  			<br/>
                   	     <div class="text-center"  ><strong>Prepared By:</strong></div>
				</div>
				<div style="float:left; margin-left: 20px;">
                  			_______________
                  			<br/>
                   	     <div class="text-center" ><strong>Checked By:</strong></div>
				</div>
				<div style="float:left; margin-left: 20px;">
                  			________________
                  			<br/>
                   	     <div class="text-center" > <strong>Approved By:</strong></div>
				</div>
				<div style="float:left; margin-left: 20px;">
                  			___________________
                  			<br/>
                   	     <div class="text-center" ><strong>Security Incharge:</strong></div>
				</div>
				
			</div>
		     </div>


			</t>
		</t>
	</template>

</odoo>


<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.report.wizard.form</field>
            <field name="model">sale.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Ecommerce Order Report">
                    <group>
                        <group >
                            <field name="start_at"/>
                        </group>
                        <group >
                            <field name="stop_at"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_sale_data_report_xls" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_data_report" model="ir.actions.act_window">
            <field name="name">Ecommerce Order Report</field>
            <field name="res_model">sale.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_data_report"
            action="action_sale_data_report"
            parent="sale.menu_sale_report"
            sequence="50"
        />
    </data>
</odoo>